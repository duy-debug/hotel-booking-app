<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @RenderSection("Styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body.modal-open {
            overflow: hidden;
        }

        /* Modal shared styles */
        .auth-modal {
            position: fixed;
            inset: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            z-index: 1000;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.25s ease;
        }

        .auth-modal.is-active {
            opacity: 1;
            pointer-events: auto;
        }

        .auth-modal_backdrop {
            position: absolute;
            inset: 0;
            background: rgba(15, 23, 42, 0.65);
            backdrop-filter: blur(6px);
        }

        .auth-modal_panel {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 640px;
        }

        .auth-modal_close {
            position: absolute;
            top: -10px;
            right: -10px;
            width: 44px;
            height: 44px;
            border-radius: 50%;
            border: none;
            background: white;
            color: #0f172a;
            font-size: 18px;
            box-shadow: 0 10px 40px rgba(15, 23, 42, 0.15);
            cursor: pointer;
        }

        .auth-card {
            background: white;
            border-radius: 28px;
            padding: 42px;
            box-shadow: 0 40px 80px rgba(15, 23, 42, 0.12);
        }

        .auth-card_header {
            display: flex;
            align-items: center;
            gap: 18px;
            margin-bottom: 30px;
        }

        .auth-card_logo {
            width: 68px;
            height: 68px;
            border-radius: 18px;
            background: linear-gradient(135deg, #0d4ea6, #3da9fc);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
        }

        .auth-card h1 {
            margin: 0;
            font-size: 28px;
        }

        .auth-card p {
            margin: 0;
            color: #475569;
        }

        .auth-form .form-group {
            margin-bottom: 18px;
        }

        .form-group label {
            font-weight: 600;
            margin-bottom: 6px;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #0d4ea6;
        }

        .form-control {
            width: 100%;
            border-radius: 14px;
            border: 1.6px solid #dbe3f0;
            padding: 12px 14px 12px 46px;
            font-size: 15px;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        .form-control:focus {
            border-color: #0d4ea6;
            box-shadow: 0 0 0 4px rgba(61, 169, 252, 0.15);
            outline: none;
        }

        .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 16px;
        }

        .checkbox-group {
            display: flex;
            gap: 10px;
            align-items: flex-start;
            font-size: 14px;
        }

        .checkbox-group input {
            margin-top: 4px;
        }

        .checkbox-group.soft-bg {
            padding: 14px;
            border-radius: 14px;
            background: #f8fbff;
        }

        .btn-primary.w-100 {
            width: 100%;
            margin-top: 10px;
        }

        .auth-divider {
            text-align: center;
            margin: 24px 0;
            position: relative;
            color: #94a3b8;
        }

        .auth-divider::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 1px;
            background: #e2e8f0;
            top: 50%;
            left: 0;
        }

        .auth-divider span {
            background: white;
            padding: 0 10px;
            position: relative;
        }

        .link-button {
            border: none;
            background: none;
            color: #0d4ea6;
            font-weight: 600;
            cursor: pointer;
        }

        .auth-validation {
            background: rgba(255, 71, 87, 0.08);
            border: 1px solid rgba(255, 71, 87, 0.4);
            border-radius: 12px;
            padding: 12px 16px;
            margin-bottom: 16px;
        }

        .field-validation-error {
            color: #dc2626;
            font-size: 13px;
            margin-top: 6px;
        }

        .password-strength {
            font-size: 13px;
            color: #64748b;
        }

        .password-strength ul {
            padding-left: 18px;
            margin: 6px 0 0;
        }

        .trust-badges {
            display: flex;
            gap: 12px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 16px;
            color: #94a3b8;
            font-size: 13px;
        }

        @@media (max-width: 768px) {
            .auth-card {
                padding: 28px;
            }

            .auth-modal_close {
                top: 8px;
                right: 8px;
            }
        }
    </style>
 </head>
<body class="bg-white min-h-screen flex flex-col">
    <header class="bg-white/80 backdrop-blur border-b border-slate-200 sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center py-3">
                <!-- Logo + title (trái) -->
                <div class="flex items-center gap-3">
                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="inline-flex items-center">
                        <img src="~/Images/logo.png"
                             alt="Shearaton"
                             class="block h-12 w-auto" />
                    </a>
                </div>

                <!-- Menu giữa -->
                <nav class="hidden md:flex flex-1 justify-center items-center gap-6 text-sm font-medium text-slate-600">
                    @Html.ActionLink("Khách Sạn", "Index", "Home", new { area = "" }, new { @class = "pb-1 border-b-2 border-transparent hover:border-sky-500 hover:text-sky-500 transition-colors", data_scroll_target = "#hotel" })
                    @Html.ActionLink("Phòng, Suite & Penthouse", "About", "Home", new { area = "" }, new { @class = "pb-1 border-b-2 border-transparent hover:border-sky-500 hover:text-sky-500 transition-colors", data_scroll_target = "#rooms" })
                    @Html.ActionLink("Dịch Vụ", "Contact", "Home", new { area = "" }, new { @class = "pb-1 border-b-2 border-transparent hover:border-sky-500 hover:text-sky-500 transition-colors", data_scroll_target = "#services" })
                    @Html.ActionLink("Vị Trí", "Location", "Home", new { area = "" }, new { @class = "pb-1 border-b-2 border-transparent hover:border-sky-500 hover:text-sky-500 transition-colors", data_scroll_target = "#location" })
                    @Html.ActionLink("Nhà Hàng & Quầy Bar", "FoodandDrink", "Home", new { area = "" }, new { @class = "pb-1 border-b-2 border-transparent hover:border-sky-500 hover:text-sky-500 transition-colors", data_scroll_target = "#dining" })
                    @Html.ActionLink("Sự Kiện & Sống Động", "PartyandEvent", "Home", new { area = "" }, new { @class = "pb-1 border-b-2 border-transparent hover:border-sky-500 hover:text-sky-500 transition-colors", data_scroll_target = "#events" })
                </nav>

                <!-- Nút auth bên phải -->
                <div class="hidden md:flex items-center gap-3 ml-4">
                    <button type="button"
                            class="px-3 py-1.5 text-sm font-medium text-slate-600 border border-sky-200 rounded-full hover:bg-sky-50 transition-colors"
                            data-open-modal="login">
                        Đăng nhập
                    </button>
                    <button type="button"
                            class="px-3 py-1.5 text-sm font-medium text-white bg-sky-500 rounded-full hover:bg-sky-600 shadow-sm transition-colors"
                            data-open-modal="register">
                        Đăng ký
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main class="flex-1">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="bg-white rounded-xl border border-slate-200/70 p-6 shadow-xs">
                @RenderBody()
            </div>
        </div>

        @Html.Partial("~/Views/Account65130650/Login.cshtml", new Project_65130650.Models.Forms.LoginForm())
        @Html.Partial("~/Views/Account65130650/Register.cshtml", new Project_65130650.Models.Forms.RegisterForm())
    </main>

    <footer class="bg-white/80 border-t border-slate-200">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4 text-xs text-slate-500 flex items-center justify-between">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            <span>Hotel Booking Management</span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        (function () {
            var body = document.body;

            function toggleModal(target, open) {
                var modal = document.getElementById(target + 'Modal');
                if (!modal) return;

                if (open) {
                    modal.classList.add('is-active');
                    modal.setAttribute('aria-hidden', 'false');
                    body.classList.add('modal-open');
                } else {
                    modal.classList.remove('is-active');
                    modal.setAttribute('aria-hidden', 'true');
                    body.classList.remove('modal-open');
                }
            }

            document.addEventListener('click', function (e) {
                var openBtn = e.target.closest('[data-open-modal]');
                if (openBtn) {
                    var target = openBtn.getAttribute('data-open-modal');
                    toggleModal(target, true);
                    return;
                }

                var closeBtn = e.target.closest('[data-modal-close]');
                if (closeBtn) {
                    var modal = closeBtn.closest('.auth-modal');
                    if (modal) {
                        modal.classList.remove('is-active');
                        modal.setAttribute('aria-hidden', 'true');
                        body.classList.remove('modal-open');
                    }
                }
            });

            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape') {
                    var activeModals = document.querySelectorAll('.auth-modal.is-active');
                    activeModals.forEach(function (modal) {
                        modal.classList.remove('is-active');
                        modal.setAttribute('aria-hidden', 'true');
                    });
                    if (activeModals.length) {
                        body.classList.remove('modal-open');
                    }
                }
            });
        })();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
