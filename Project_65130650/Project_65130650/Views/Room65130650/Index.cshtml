@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Custom Dropdown Logic
            var dropdowns = document.querySelectorAll('.custom-dropdown');

            dropdowns.forEach(function (dropdown) {
                var selected = dropdown.querySelector('.dropdown-selected');
                var options = dropdown.querySelector('.dropdown-options');
                var hiddenInput = dropdown.querySelector('input[type="hidden"]');
                var optionItems = dropdown.querySelectorAll('.dropdown-option');

                // Toggle dropdown
                selected.addEventListener('click', function (e) {
                    e.stopPropagation();
                    
                    // Close other dropdowns
                    dropdowns.forEach(function (d) {
                        if (d !== dropdown) {
                            d.classList.remove('open');
                        }
                    });

                    dropdown.classList.toggle('open');
                });

                // Select option
                optionItems.forEach(function (option) {
                    // Mark selected option
                    if (option.getAttribute('data-value') === hiddenInput.value) {
                        option.classList.add('selected');
                    }

                    option.addEventListener('click', function (e) {
                        e.stopPropagation();
                        
                        var value = option.getAttribute('data-value');
                        var text = option.textContent.trim();
                        
                        // Update hidden input
                        hiddenInput.value = value;
                        
                        // Update displayed text
                        selected.querySelector('span').textContent = text;
                        
                        // Update selected state
                        optionItems.forEach(function (o) {
                            o.classList.remove('selected');
                        });
                        option.classList.add('selected');
                        
                        // Close dropdown
                        dropdown.classList.remove('open');
                    });
                });
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function () {
                dropdowns.forEach(function (dropdown) {
                    dropdown.classList.remove('open');
                });
            });

            // Prevent dropdown from closing when clicking inside options
            document.querySelectorAll('.dropdown-options').forEach(function (options) {
                options.addEventListener('click', function (e) {
                    e.stopPropagation();
                });
            });
        });
    </script>
}
