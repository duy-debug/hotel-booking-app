@model Project_65130650.Models.ViewModels.RoomListViewModel
@{
    ViewBag.Title = "Tất cả phòng";
}

<div class="rooms-page">
    <!-- Page Header -->
    <div class="page-header">
        <nav class="breadcrumb">
            <a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Trang chủ</a>
            <span class="separator"><i class="fas fa-chevron-right"></i></span>
            <span class="current">Tất cả phòng</span>
        </nav>
        <h1>Danh sách phòng còn trống</h1>
        <p class="subtitle">Tìm thấy <strong>@Model.TotalItems</strong> loại phòng phù hợp</p>
    </div>

    <!-- Search & Filter Bar (Horizontal) -->
    <div class="filter-bar">
        <form method="get" action="@Url.Action("Index", "Room65130650")" class="filter-form" id="filterForm">
            <!-- Search Box -->
            <div class="filter-item search-item">
                <div class="search-input-wrapper">
                    <i class="fas fa-search"></i>
                    <input type="text" name="search" value="@Model.SearchQuery" placeholder="Tìm kiếm phòng..." />
                </div>
            </div>

            <!-- Filter: Loại phòng - Custom Dropdown -->
            <div class="filter-item">
                <label><i class="fas fa-door-open"></i> Loại phòng</label>
                <div class="custom-dropdown" data-name="loaiPhong">
                    <input type="hidden" name="loaiPhong" value="@Model.SelectedLoaiPhong" />
                    <div class="dropdown-selected">
                        <span>@(string.IsNullOrEmpty(Model.SelectedLoaiPhong) ? "Tất cả loại phòng" : Model.LoaiPhongs.FirstOrDefault(x => x.MaLoaiPhong == Model.SelectedLoaiPhong)?.TenLoaiPhong ?? "Tất cả loại phòng")</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="dropdown-options">
                        <div class="dropdown-option" data-value="">Tất cả loại phòng</div>
                        @foreach (var lp in Model.LoaiPhongs)
                        {
                            <div class="dropdown-option" data-value="@lp.MaLoaiPhong">
                                @lp.TenLoaiPhong <span class="option-count">(@lp.SoPhongConTrong phòng)</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Filter: Giá từ - Custom Dropdown -->
            <div class="filter-item">
                <label><i class="fas fa-tag"></i> Giá từ</label>
                <div class="custom-dropdown" data-name="minPrice">
                    <input type="hidden" name="minPrice" value="@Model.MinPrice" />
                    <div class="dropdown-selected">
                        <span>@(Model.MinPrice.HasValue ? String.Format("{0:N0} VNĐ", Model.MinPrice) : "Không giới hạn")</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="dropdown-options">
                        <div class="dropdown-option" data-value="">Không giới hạn</div>
                        <div class="dropdown-option" data-value="500000">500,000 VNĐ</div>
                        <div class="dropdown-option" data-value="1000000">1,000,000 VNĐ</div>
                        <div class="dropdown-option" data-value="2000000">2,000,000 VNĐ</div>
                        <div class="dropdown-option" data-value="3000000">3,000,000 VNĐ</div>
                    </div>
                </div>
            </div>

            <!-- Filter: Giá đến - Custom Dropdown -->
            <div class="filter-item">
                <label><i class="fas fa-tag"></i> Giá đến</label>
                <div class="custom-dropdown" data-name="maxPrice">
                    <input type="hidden" name="maxPrice" value="@Model.MaxPrice" />
                    <div class="dropdown-selected">
                        <span>@(Model.MaxPrice.HasValue ? String.Format("{0:N0} VNĐ", Model.MaxPrice) : "Không giới hạn")</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="dropdown-options">
                        <div class="dropdown-option" data-value="">Không giới hạn</div>
                        <div class="dropdown-option" data-value="1000000">1,000,000 VNĐ</div>
                        <div class="dropdown-option" data-value="2000000">2,000,000 VNĐ</div>
                        <div class="dropdown-option" data-value="5000000">5,000,000 VNĐ</div>
                        <div class="dropdown-option" data-value="10000000">10,000,000 VNĐ</div>
                    </div>
                </div>
            </div>

            <!-- Filter: Số người - Custom Dropdown -->
            <div class="filter-item">
                <label><i class="fas fa-users"></i> Số người</label>
                <div class="custom-dropdown" data-name="minCapacity">
                    <input type="hidden" name="minCapacity" value="@Model.MinCapacity" />
                    <div class="dropdown-selected">
                        <span>@(Model.MinCapacity.HasValue ? Model.MinCapacity + "+ người" : "Tất cả")</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="dropdown-options">
                        <div class="dropdown-option" data-value="">Tất cả</div>
                        <div class="dropdown-option" data-value="2">2+ người</div>
                        <div class="dropdown-option" data-value="4">4+ người</div>
                        <div class="dropdown-option" data-value="6">6+ người</div>
                    </div>
                </div>
            </div>

            <!-- Hidden input for sortOrder -->
            <input type="hidden" name="sortOrder" id="sortOrderInput" value="@Model.SortOrder" />

            <!-- Buttons -->
            <div class="filter-item filter-buttons">
                <button type="submit" class="btn-filter">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>
                <a href="@Url.Action("Index", "Room65130650")" class="btn-clear">
                    <i class="fas fa-undo"></i> Xóa bộ lọc
                </a>
            </div>
        </form>
    </div>

    <!-- Sort Bar -->
    <div class="sort-bar">
        <span class="sort-label"><i class="fas fa-sort"></i> Sắp xếp:</span>
        <div class="sort-buttons">
            <a href="@Url.Action("Index", "Room65130650", new { search = Model.SearchQuery, loaiPhong = Model.SelectedLoaiPhong, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, minCapacity = Model.MinCapacity, sortOrder = "price_asc", page = 1 })" 
               class="sort-btn @(Model.SortOrder == "price_asc" ? "active" : "")">
                <i class="fas fa-sort-amount-up-alt"></i> Giá tăng dần
            </a>
            <a href="@Url.Action("Index", "Room65130650", new { search = Model.SearchQuery, loaiPhong = Model.SelectedLoaiPhong, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, minCapacity = Model.MinCapacity, sortOrder = "price_desc", page = 1 })" 
               class="sort-btn @(Model.SortOrder == "price_desc" ? "active" : "")">
                <i class="fas fa-sort-amount-down"></i> Giá giảm dần
            </a>
            <a href="@Url.Action("Index", "Room65130650", new { search = Model.SearchQuery, loaiPhong = Model.SelectedLoaiPhong, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, minCapacity = Model.MinCapacity, page = 1 })" 
               class="sort-btn @(string.IsNullOrEmpty(Model.SortOrder) ? "active" : "")">
                <i class="fas fa-star"></i> Mặc định
            </a>
        </div>
    </div>

    <!-- Room Grid -->
    <div class="rooms-grid-container">
        @if (Model.Rooms.Any())
        {
            <div class="rooms-grid">
                @foreach (var room in Model.Rooms)
                {
                    <article class="room-card">
                        <div class="room-card__image">
                            <img src="@Url.Content("~/Images/phonghangsang.jpeg")" alt="@room.TenLoaiPhong" />
                            <span class="availability-tag">
                                <i class="fas fa-check-circle"></i> Còn @room.SoPhongConTrong phòng
                            </span>
                        </div>
                        <div class="room-card__content">
                            <h3>@room.TenLoaiPhong</h3>
                            <div class="room-specs">
                                <span><i class="fas fa-ruler-combined"></i> @room.DienTichPhong m²</span>
                                <span><i class="fas fa-users"></i> @room.SoNguoiToiDa người</span>
                                <span><i class="fas fa-bed"></i> @room.LoaiGiuong</span>
                            </div>
                            @if (!string.IsNullOrEmpty(room.MoTa))
                            {
                                <p class="room-desc">@(room.MoTa.Length > 100 ? room.MoTa.Substring(0, 100) + "..." : room.MoTa)</p>
                            }
                            <div class="room-footer">
                                <div class="room-price">
                                    <span class="price">@String.Format("{0:N0}", room.GiaCoBan) VNĐ</span>
                                    <span class="per-night">/đêm</span>
                                </div>
                                <div class="room-actions">
                                    <button class="btn-book">
                                        <i class="fas fa-calendar-check"></i> Đặt phòng
                                    </button>
                                    <a href="@Url.Action("RoomDetail", "Home", new { id = room.MaLoaiPhong })" class="btn-detail">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    </article>
                }
            </div>
        }
        else
        {
            <div class="no-results">
                <i class="fas fa-search"></i>
                <h3>Không tìm thấy phòng phù hợp</h3>
                <p>Vui lòng thử thay đổi tiêu chí tìm kiếm hoặc xóa bộ lọc</p>
            </div>
        }

        @if (Model.TotalPages > 1)
        {
            <div class="pagination">
                @if (Model.HasPreviousPage)
                {
                    <a href="@Url.Action("Index", "Room65130650", new { page = Model.CurrentPage - 1, search = Model.SearchQuery, loaiPhong = Model.SelectedLoaiPhong, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, minCapacity = Model.MinCapacity, sortOrder = Model.SortOrder })" class="page-btn prev">
                        <i class="fas fa-chevron-left"></i> Trước
                    </a>
                }

                <div class="page-numbers">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <span class="page-btn current">@i</span>
                        }
                        else
                        {
                            <a href="@Url.Action("Index", "Room65130650", new { page = i, search = Model.SearchQuery, loaiPhong = Model.SelectedLoaiPhong, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, minCapacity = Model.MinCapacity, sortOrder = Model.SortOrder })" class="page-btn">@i</a>
                        }
                    }
                </div>

                @if (Model.HasNextPage)
                {
                    <a href="@Url.Action("Index", "Room65130650", new { page = Model.CurrentPage + 1, search = Model.SearchQuery, loaiPhong = Model.SelectedLoaiPhong, minPrice = Model.MinPrice, maxPrice = Model.MaxPrice, minCapacity = Model.MinCapacity, sortOrder = Model.SortOrder })" class="page-btn next">
                        Sau <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        }
    </div>
</div>

