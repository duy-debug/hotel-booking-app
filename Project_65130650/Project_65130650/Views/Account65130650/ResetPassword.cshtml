@model Project_65130650.Models.Forms.ResetPasswordForm

@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex justify-center items-center min-h-[70vh] py-12">
    <div class="auth-card" style="max-width: 520px; width: 100%;">
        @* Tiêu đề của Form *@
        <div class="auth-card_header">
            <div class="auth-card_logo">
                <i class="fas fa-user-shield"></i>
            </div>
            <div>
                <h1>Đặt Lại Mật Khẩu</h1>
                <p>Nhập mã xác nhận và mật khẩu mới của bạn</p>
            </div>
        </div>

        @* Hiển thị thông báo thành công nếu có *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-xl mb-6 flex items-center gap-3">
                <i class="fas fa-info-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }

        @using (Html.BeginForm("ResetPassword", "Account65130650", FormMethod.Post, new { @class = "auth-form", id = "resetPasswordForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Email) @* Lưu ẩn email để gửi lên Server *@

            @* Hiển thị các lỗi hệ thống chung (như sai mã, mã hết hạn) *@
            if (!ViewData.ModelState.IsValid && ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {
                <div class="auth-validation" style="display: block; background: rgba(239, 68, 68, 0.1); border: 1px solid #fecaca; padding: 12px; border-radius: 12px; margin-bottom: 20px;">
                    @Html.ValidationSummary(true, "", new { @style = "list-style: none; padding: 0; margin: 0; color: #dc2626; font-size: 13px;" })
                </div>
            }

            @* Ô nhập mã xác nhận 6 chữ số *@
            <div class="form-group">
                <label>Mã xác nhận (Gửi qua email) <span style="color: red;">*</span></label>
                <div class="input-wrapper">
                    @Html.TextBoxFor(m => m.VerificationCode, new { @class = "form-control", placeholder = "Nhập 6 chữ số", maxlength = "6", autocomplete = "one-time-code" })
                    <i class="fas fa-key input-icon"></i>
                </div>
                @Html.ValidationMessageFor(m => m.VerificationCode, "", new { @class = "field-validation-error" })
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                @* Ô nhập mật khẩu mới *@
                <div class="form-group">
                    <label>Mật khẩu mới <span style="color: red;">*</span></label>
                    <div class="input-wrapper">
                        @* Dùng TextBox type=password thay vì PasswordFor để hỗ trợ Sticky Form (giữ lại dữ liệu khi lỗi) *@
                        @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", placeholder = "********", type = "password", id = "newPassword" })
                        <i class="fas fa-lock input-icon"></i>
                        @* Nút ẩn hiện mật khẩu *@
                        <button type="button" class="toggle-password" onclick="togglePasswordVisibility('newPassword', this)">
                            <i class="far fa-eye"></i>
                        </button>
                    </div>
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "field-validation-error" })
                </div>

                @* Ô xác nhận mật khẩu mới *@
                <div class="form-group">
                    <label>Xác nhận mật khẩu <span style="color: red;">*</span></label>
                    <div class="input-wrapper">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "********", type = "password", id = "confirmPassword" })
                        <i class="fas fa-lock input-icon"></i>
                        @* Nút ẩn hiện mật khẩu *@
                        <button type="button" class="toggle-password" onclick="togglePasswordVisibility('confirmPassword', this)">
                            <i class="far fa-eye"></i>
                        </button>
                    </div>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "field-validation-error" })
                </div>
            </div>

            <button type="submit" class="btn-primary" style="width: 100%; margin-top: 10px;" id="submitBtn">
                <i class="fas fa-check"></i> Đổi Mật Khẩu
            </button>
            
            @* Link gửi lại mã nếu chưa nhận được *@
            <div style="text-align: center; margin-top: 24px; font-size: 14px;">
                <p class="text-slate-500">
                    Chưa nhận được mã? 
                    <a href="@Url.Action("ForgotPassword", "Account65130650", new { email = Model.Email })" class="text-sky-600 font-semibold hover:underline">Gửi lại mã</a>
                </p>
            </div>
        }
    </div>
</div>

<style>
    /* CSS cho nút mắt ẩn/hiện mật khẩu */
    .toggle-password {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #94a3b8;
        cursor: pointer;
        padding: 4px;
        transition: color 0.2s;
        z-index: 10;
    }

    .toggle-password:hover {
        color: #0d4ea6;
    }

    /* Ẩn con mắt mặc định của trình duyệt Edge/Chrome để không bị trùng icon */
    input::-ms-reveal,
    input::-ms-clear {
        display: none;
    }

    .form-control {
        padding-right: 40px; /* Tránh text bị đè lên icon mắt */
    }
</style>

<script>
    /**
     * Hàm chuyển đổi trạng thái hiển thị mật khẩu giữa 'password' và 'text'
     */
    function togglePasswordVisibility(inputId, btn) {
        const input = document.getElementById(inputId);
        const icon = btn.querySelector('i');
        
        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            input.type = "password";
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }

    /**
     * Sự kiện khi người dùng nhấn Submit
     * Vô hiệu hóa nút để tránh gửi yêu cầu nhiều lần và hiển thị hiệu ứng loading
     */
    document.getElementById('resetPasswordForm').addEventListener('submit', function() {
        const btn = document.getElementById('submitBtn');
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang xử lý...';
    });
</script>
