        .landing-hero,
        .landing-hero *,
        .section,
        .section *,
        .dining-slider,
        .dining-slider *,
        .icon-features,
        .icon-features * {
            border: none !important;
        }

        /* Extra override: remove Tailwind borders & dividers on this page */
        body main *,
        body [class*="border-"],
        body .border,
        body [class*="divide-"],
        body .divide-x,
        body .divide-y {
            border: none !important;
            border-width: 0 !important;
        }

