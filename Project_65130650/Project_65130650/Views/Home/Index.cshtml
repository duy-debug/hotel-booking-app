                </div>
                <div class="dining-slider__slide">
                    <img src="~/Images/quaybar.png" alt="Quầy bar" />
                </div>
                <div class="dining-slider__slide">
                    <img src="~/Images/quaybar1.jpg" alt="Quầy bar" />
                </div>
                <div class="dining-slider__slide">
                    <img src="~/Images/nhahang1.jpg" alt="Quầy bar" />
                </div>
                <div class="dining-slider__slide">
                    <img src="~/Images/nhahang3.jpg" alt="Quầy bar" />
                </div>
            </div>
            <button type="button" class="dining-slider__control dining-slider__control--prev" data-direction="prev">
                <i class="fas fa-chevron-left"></i>
            </button>
