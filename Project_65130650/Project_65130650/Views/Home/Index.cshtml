@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(rgba(2,119,189,0.8), rgba(1,87,155,0.9)), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 600"><rect fill="%230277bd" width="1200" height="600"/><path fill="%2301579b" d="M0 300 Q300 200 600 300 T1200 300 V600 H0 Z"/></svg>');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 100px 20px;
        text-align: center;
        border-radius: 20px;
        margin-bottom: 60px;
        animation: fadeInDown 1s ease;
    }
    
    .hero-section h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 2px 2px 10px rgba(0,0,0,0.3);
    }
    
    .hero-section p {
        font-size: 1.3rem;
        margin-bottom: 40px;
        opacity: 0.95;
    }
    
    .btn-hero {
        display: inline-block;
        padding: 15px 40px;
        background: white;
        color: #0277bd;
        font-weight: 600;
        border-radius: 30px;
        text-decoration: none;
        transition: all 0.3s;
        margin: 0 10px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }
    
    .btn-hero:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.3);
    }
    
    .btn-hero.secondary {
        background: transparent;
        color: white;
        border: 2px solid white;
    }
    
    .btn-hero.secondary:hover {
        background: white;
        color: #0277bd;
    }
    
    /* Features Section */
    .features-section {
        padding: 60px 0;
        animation: fadeInUp 1s ease 0.3s both;
    }
    
    .section-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        color: #0277bd;
        margin-bottom: 50px;
    }
    
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        margin-bottom: 60px;
    }
    
    .feature-card {
        background: white;
        padding: 40px 30px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 8px 25px rgba(2,119,189,0.1);
        transition: all 0.3s;
        animation: fadeInUp 0.8s ease both;
    }
    
    .feature-card:nth-child(1) { animation-delay: 0.1s; }
    .feature-card:nth-child(2) { animation-delay: 0.2s; }
    .feature-card:nth-child(3) { animation-delay: 0.3s; }
    .feature-card:nth-child(4) { animation-delay: 0.4s; }
    
    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(2,119,189,0.2);
    }
    
    .feature-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #0277bd, #01579b);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 2rem;
        color: white;
    }
    
    .feature-card h3 {
        font-size: 1.5rem;
        color: #0277bd;
        margin-bottom: 15px;
    }
    
    .feature-card p {
        color: #666;
        line-height: 1.6;
    }
    
    /* Room Types Section */
    .rooms-section {
        padding: 60px 0;
        background: linear-gradient(to bottom, #e0f7fa, white);
        border-radius: 20px;
        margin-bottom: 60px;
        animation: fadeIn 1s ease 0.5s both;
    }
    
    .rooms-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        padding: 0 20px;
    }
    
    .room-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(2,119,189,0.1);
        transition: all 0.3s;
        animation: scaleIn 0.8s ease both;
    }
    
    .room-card:nth-child(1) { animation-delay: 0.2s; }
    .room-card:nth-child(2) { animation-delay: 0.3s; }
    .room-card:nth-child(3) { animation-delay: 0.4s; }
    
    .room-card:hover {
        transform: scale(1.05);
        box-shadow: 0 15px 40px rgba(2,119,189,0.2);
    }
    
    .room-image {
        height: 200px;
        background: linear-gradient(135deg, #0277bd 0%, #4dd0e1 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        color: rgba(255,255,255,0.9);
        position: relative;
        overflow: hidden;
    }
    
    .room-image::before {
        content: '';
        position: absolute;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
        animation: pulse 3s ease-in-out infinite;
    }
    
    .room-info {
        padding: 25px;
    }
    
    .room-info h3 {
        font-size: 1.3rem;
        color: #0277bd;
        margin-bottom: 10px;
    }
    
    .room-info p {
        color: #666;
        margin-bottom: 15px;
        line-height: 1.6;
    }
    
    .room-price {
        font-size: 1.5rem;
        font-weight: 700;
        color: #01579b;
        margin-bottom: 15px;
    }
    
    .btn-book {
        display: inline-block;
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #0277bd, #01579b);
        color: white;
        text-align: center;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .btn-book:hover {
        background: linear-gradient(135deg, #01579b, #0277bd);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(2,119,189,0.3);
    }
    
    /* Stats Section */
    .stats-section {
        background: linear-gradient(135deg, #0277bd, #01579b);
        color: white;
        padding: 60px 20px;
        border-radius: 20px;
        margin-bottom: 60px;
        animation: fadeInUp 1s ease 0.7s both;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 40px;
        text-align: center;
    }
    
    .stat-item {
        animation: bounceIn 1s ease both;
    }
    
    .stat-item:nth-child(1) { animation-delay: 0.8s; }
    .stat-item:nth-child(2) { animation-delay: 0.9s; }
    .stat-item:nth-child(3) { animation-delay: 1s; }
    .stat-item:nth-child(4) { animation-delay: 1.1s; }
    
    .stat-number {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 10px;
    }
    
    .stat-label {
        font-size: 1.1rem;
        opacity: 0.9;
    }
    
    /* Animations */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
    
    @@keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0.8);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
    
    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.3);
        }
        50% {
            opacity: 1;
            transform: scale(1.05);
        }
        70% {
            transform: scale(0.9);
        }
        100% {
            transform: scale(1);
        }
    }
    
    @@keyframes pulse {
        0%, 100% {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0.3;
        }
        50% {
            transform: translate(-50%, -50%) scale(1.2);
            opacity: 0.1;
        }
    }
    
    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2rem;
        }
        .hero-section p {
            font-size: 1rem;
        }
        .section-title {
            font-size: 1.8rem;
        }
    }
</style>

<!-- Hero Section -->
