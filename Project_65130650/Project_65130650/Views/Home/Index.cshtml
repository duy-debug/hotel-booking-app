@section Styles {
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #f4f7fb;
            color: #0f172a;
        }

        .landing-hero {
            position: relative;
            width: 100vw;
            margin-left: calc(-50vw + 50%);
            margin-top: -70px; /* Đẩy lên trên để đè header */
            min-height: 100vh;
            overflow: hidden;
        }

        /* Hero Slider */
        .hero-slider {
            position: relative;
            width: 100%;
            height: 100vh;
        }

        .hero-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            visibility: hidden;
            transition: opacity 1s ease-in-out, visibility 1s ease-in-out;
        }

        .hero-slide.active {
            opacity: 1;
            visibility: visible;
        }

        .hero-slide__background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        .hero-slide__background img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: scale(1.05);
            transition: transform 8s ease-out;
        }

        .hero-slide.active .hero-slide__background img {
            transform: scale(1);
        }

        .hero-slide__overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(15, 23, 42, 0.7) 0%, rgba(15, 23, 42, 0.35) 50%, rgba(15, 23, 42, 0.55) 100%);
        }

        .hero-slide__content {
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 20px;
            max-width: 900px;
            margin: 0 auto;
            padding: 120px 40px 180px;
            text-align: center;
            height: 100%;
            /* Khôi phục hiệu ứng trượt từ dưới lên */
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 1s cubic-bezier(0.22, 1, 0.36, 1), transform 1s cubic-bezier(0.22, 1, 0.36, 1);
        }

        .hero-slide.active .hero-slide__content {
            opacity: 1;
            transform: translateY(0);
        }

        .hero-slide h1 {
            font-size: 56px;
            font-weight: 800;
            color: #ffffff;
            line-height: 1.1;
            text-shadow: 0 4px 30px rgba(0, 0, 0, 0.4);
            margin: 0;
        }

        .hero-slide__cta {
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
            margin-top: 24px;
            justify-content: center;
        }

        /* Navigation Dots với Progress Bar */
        .hero-slider__nav {
            position: absolute;
            bottom: 140px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 12px;
            z-index: 10;
        }

        .hero-slider__dot {
            width: 60px;
            height: 4px;
            background: rgba(255, 255, 255, 0.3);
            border: none;
            border-radius: 4px;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transition: background 0.3s ease;
            padding: 0;
        }

        .hero-slider__dot:hover {
            background: rgba(255, 255, 255, 0.5);
        }

        .hero-slider__progress {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 0;
            background: linear-gradient(90deg, #38bdf8, #0ea5e9);
            border-radius: 4px;
            transition: width 0.1s linear;
        }

        .hero-slider__dot.active .hero-slider__progress {
            animation: progressBar 6s linear forwards;
        }

        @@keyframes progressBar {
            from { width: 0; }
            to { width: 100%; }
        }

        /* Arrow Controls */
        .hero-slider__arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 50px;
            height: 50px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: #ffffff;
            font-size: 18px;
            cursor: pointer;
            z-index: 10;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .hero-slider__arrow:hover {
            background: rgba(255, 255, 255, 0.25);
            border-color: rgba(255, 255, 255, 0.6);
            transform: translateY(-50%) scale(1.1);
        }

        .hero-slider__arrow--prev {
            left: 30px;
        }

        .hero-slider__arrow--next {
            right: 30px;
        }

        /* Stats Bar cố định ở dưới */
        .hero-stats-bar {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            display: flex;
            justify-content: center;
            gap: 60px;
            padding: 32px 40px;
            /* Hoàn toàn trong suốt để ảnh nền hiện lên thực tế nhất */
            background: transparent;
            backdrop-filter: none;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            z-index: 10;
        }

        .hero-stat {
