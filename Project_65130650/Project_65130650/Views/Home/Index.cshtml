@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var header = document.querySelector('header');
            var headerOffset = header ? header.offsetHeight + 8 : 80;

            function scrollToTarget(selector) {
                var target = document.querySelector(selector);
                if (!target) return;

                var rect = target.getBoundingClientRect();
                var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                var top = rect.top + scrollTop - headerOffset;

                window.scrollTo({
                    top: top,
                    behavior: 'smooth'
                });
            }

            document.querySelectorAll('[data-scroll-target]').forEach(function (el) {
                el.addEventListener('click', function (e) {
                    var selector = el.getAttribute('data-scroll-target');
                    if (!selector) return;
                    e.preventDefault();
                    scrollToTarget(selector);
                });
            });

            var observer = new IntersectionObserver(function (entries) {
                entries.forEach(function (entry) {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('reveal--visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.2
            });

            document.querySelectorAll('.reveal').forEach(function (el) {
                observer.observe(el);
            });

            // ========== HERO SLIDER ==========
            var slides = document.querySelectorAll('.hero-slide');
            var dots = document.querySelectorAll('.hero-slider__dot');
            var prevBtn = document.querySelector('.hero-slider__arrow--prev');
            var nextBtn = document.querySelector('.hero-slider__arrow--next');
            var currentSlide = 0;
            var slideInterval;
            var slideDuration = 6000; // 6 giây mỗi slide

            function goToSlide(index) {
                // Xóa active từ tất cả slides và dots
                slides.forEach(function(slide) {
                    slide.classList.remove('active');
                });
                dots.forEach(function(dot) {
                    dot.classList.remove('active');
                    // Reset progress bar animation
                    var progress = dot.querySelector('.hero-slider__progress');
                    if (progress) {
                        progress.style.animation = 'none';
                        progress.offsetHeight; // Force reflow
                        progress.style.animation = '';
                    }
                });

                // Thêm active cho slide và dot hiện tại
                currentSlide = index;
                if (currentSlide >= slides.length) currentSlide = 0;
                if (currentSlide < 0) currentSlide = slides.length - 1;

                slides[currentSlide].classList.add('active');
                dots[currentSlide].classList.add('active');
            }

            function nextSlide() {
                goToSlide(currentSlide + 1);
            }

            function prevSlide() {
                goToSlide(currentSlide - 1);
            }

            function startAutoPlay() {
                stopAutoPlay();
                slideInterval = setInterval(nextSlide, slideDuration);
            }

            function stopAutoPlay() {
                if (slideInterval) {
                    clearInterval(slideInterval);
                }
            }

            // Event listeners cho dots
            dots.forEach(function(dot, index) {
                dot.addEventListener('click', function() {
                    goToSlide(index);
                    startAutoPlay(); // Reset timer khi click
                });
            });

            // Event listeners cho arrows
            if (prevBtn) {
                prevBtn.addEventListener('click', function() {
                    prevSlide();
                    startAutoPlay();
                });
            }

            if (nextBtn) {
                nextBtn.addEventListener('click', function() {
                    nextSlide();
                    startAutoPlay();
                });
            }

            // Khởi động slider
            goToSlide(0);
            startAutoPlay();

            var diningSlider = document.getElementById('diningSlider');
            if (diningSlider) {
                var diningTrack = diningSlider.querySelector('.dining-slider__track');
                var diningSlides = Array.prototype.slice.call(diningSlider.querySelectorAll('.dining-slider__slide'));
                var diningIndex = 0;
                var diningInterval = null;
                var diningDelay = 3000;

                function goToDiningSlide(index) {
                    if (!diningSlides.length || !diningTrack) return;
                    diningIndex = (index + diningSlides.length) % diningSlides.length;
                    var offset = -diningIndex * 100;
                    diningTrack.style.transform = 'translateX(' + offset + '%)';
                }

                function startDiningAutoPlay() {
                    stopDiningAutoPlay();
                    diningInterval = window.setInterval(function () {
                        goToDiningSlide(diningIndex + 1);
                    }, diningDelay);
                }

                function stopDiningAutoPlay() {
                    if (diningInterval) {
                        window.clearInterval(diningInterval);
                        diningInterval = null;
                    }
                }

                var diningPrev = diningSlider.querySelector('[data-direction="prev"]');
                var diningNext = diningSlider.querySelector('[data-direction="next"]');

                if (diningPrev) {
                    diningPrev.addEventListener('click', function () {
                        goToDiningSlide(diningIndex - 1);
                        startDiningAutoPlay();
                    });
                }

                if (diningNext) {
                    diningNext.addEventListener('click', function () {
                        goToDiningSlide(diningIndex + 1);
                        startDiningAutoPlay();
                    });
                }

                diningSlider.addEventListener('mouseenter', stopDiningAutoPlay);
                diningSlider.addEventListener('mouseleave', startDiningAutoPlay);

                goToDiningSlide(0);
                startDiningAutoPlay();
            }
        });
    </script>
