            .landing-hero {
                grid-template-columns: minmax(0, 1fr);
            }

            .section,
            .section--alt {
                grid-template-columns: minmax(0, 1fr);
            }

            .featured-rooms-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

