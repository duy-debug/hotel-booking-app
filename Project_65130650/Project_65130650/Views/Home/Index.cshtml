@using Project_65130650.Models.Forms
@{
    ViewBag.Title = "Hotel Booking";
    var loginModel = new LoginForm();
    var registerModel = new RegisterForm();
}

<section class="landing-hero" id="top">
    <div class="landing-hero__content">
        <p class="eyebrow">Shearaton Hotel Nha Trang</p>
        <h1>Trải nghiệm lưu trú 5 sao giữa lòng thành phố</h1>
        <p class="lead">
            Khám phá hệ thống phòng sang trọng, ẩm thực tinh tế và các sự kiện sôi động
            được thiết kế riêng cho từng khoảnh khắc của bạn.
        </p>
        <div class="landing-hero__cta">
            <button class="btn-primary" data-scroll-target="#rooms">Đặt phòng ngay</button>
            <button class="btn-ghost" data-scroll-target="#hotel">Khám phá khách sạn</button>
        </div>
        <div class="landing-hero__stats">
            <div>
                <strong>150K+</strong>
                <span>Khách lưu trú</span>
            </div>
            <div>
                <strong>98%</strong>
                <span>Hài lòng dịch vụ</span>
            </div>
            <div>
                <strong>24/7</strong>
                <span>Hỗ trợ khách hàng</span>
            </div>
        </div>
    </div>
    <div class="landing-hero__media">
        <div class="landing-hero__image-main reveal">
            <img src="~/Images/khachsan.jpg" alt="Khách sạn Shearaton" />
        </div>
        <div class="landing-hero__image-grid">
            <img src="~/Images/sanhkhachsan.jpg" alt="Sảnh khách sạn" class="reveal" />
            <img src="~/Images/hoboi.jpg" alt="Hồ bơi ngoài trời" class="reveal" />
        </div>
    </div>
</section>

<section id="hotel" class="section section--alt reveal">
    <div class="section__media">
        <img src="~/Images/khonggian.jpg" alt="Toàn cảnh khách sạn" />
    </div>
    <div class="section__content">
        <p class="section__eyebrow">Khách sạn</p>
        <h2>Không gian nghỉ dưỡng chuẩn quốc tế</h2>
        <p>
            Tọa lạc tại vị trí đắc địa, Shearaton mang đến tầm nhìn toàn cảnh thành phố,
            thiết kế kiến trúc hiện đại hòa quyện cùng nét sang trọng cổ điển.
        </p>
        <ul class="section__list">
            <li>Hơn 300 phòng và suite với nhiều hạng khác nhau</li>
            <li>Khuôn viên xanh mát, hồ bơi vô cực và spa cao cấp</li>
            <li>Dịch vụ concierge cá nhân hóa cho từng khách</li>
        </ul>
    </div>
</section>

<!-- Featured Rooms Section -->
<section id="rooms" class="section reveal">
    <div class="section__content">
        <p class="section__eyebrow">Phòng nổi bật</p>
        <h2>Không gian nghỉ dưỡng sang trọng</h2>
        <p>
            Khám phá các phòng được yêu thích nhất tại Shearaton, mang đến trải nghiệm 
            tiện nghi đẳng cấp và không gian riêng tư hoàn hảo.
        </p>

        <div class="featured-rooms-container">
            @{
                var featuredRooms = ViewBag.FeaturedRooms as IEnumerable<Project_65130650.Models.ViewModels.RoomCardViewModel>;
            }

            <!-- Featured Rooms grid -->
            <div class="featured-rooms-grid">
                @if (featuredRooms != null && featuredRooms.Any())
                {
                    foreach (var room in featuredRooms)
                    {
                        <article class="featured-room-card">
                            <div class="featured-room-card__image">
                                @{
                                    var imagePath = "~/Images/phonghangsang.jpeg"; // default
                                    if (!string.IsNullOrEmpty(room.HinhAnh))
                                    {
                                        var firstImage = room.HinhAnh.Split(',', ';')[0].Trim();
                                        if (firstImage.StartsWith("~/"))
                                        {
                                            imagePath = firstImage;
                                        }
                                        else if (firstImage.StartsWith("Images/"))
                                        {
                                            imagePath = "~/" + firstImage;
                                        }
                                        else if (!firstImage.Contains("/"))
                                        {
                                            imagePath = "~/Images/" + firstImage;
                                        }
                                        else
                                        {
                                            imagePath = firstImage;
                                        }
                                    }
                                }
                                <img src="@Url.Content(imagePath)" alt="@room.TenLoaiPhong" />
                                <span class="featured-badge">
                                    <i class="fas fa-star"></i> Nổi bật
                                </span>
                            </div>
                            <div class="featured-room-card__content">
                                <h3>@room.TenLoaiPhong</h3>
                                <div class="room-specs">
                                    <p class="room-info">
                                        <i class="fas fa-ruler-combined"></i> @room.DienTichPhong m²
                                    </p>
                                    <p class="room-info">
                                        <i class="fas fa-users"></i> Tối đa @room.SoNguoiToiDa người
                                    </p>
                                </div>
                                <p class="room-price">
                                    @String.Format("{0:N0} VNĐ", room.GiaCoBan)<span class="price-unit">/đêm</span>
                                </p>
                                <div class="room-actions">
                                    <button class="btn-primary">
                                        <i class="fas fa-calendar-check"></i> Đặt phòng
                                    </button>
                                    <a href="@Url.Action("RoomDetail", "Home", new { id = room.MaLoaiPhong })" class="btn-ghost">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>
                                </div>
                            </div>
                        </article>
                    }
                }
                else
                {
                    <div class="no-rooms-message">
                        <i class="fas fa-hotel"></i>
                        <p>Hiện chưa có phòng nổi bật.</p>
                    </div>
                }
            </div>

            <!-- View All Rooms Button - Centered -->
            <div class="view-all-container">
                <a href="@Url.Action("Index", "Room65130650")" class="btn-view-all">
                    <span>Xem tất cả phòng</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<section id="services" class="section section--alt reveal">
    <div class="section__media">
        <img src="~/Images/spa.png" alt="Dịch vụ spa" />
    </div>
    <div class="section__content">
        <p class="section__eyebrow">Dịch vụ</p>
        <h2>Tiện ích trọn vẹn cho mọi nhu cầu</h2>
        <p>
            Tận hưởng hệ sinh thái dịch vụ đa dạng được thiết kế để đáp ứng mọi nhu cầu
            của bạn trong suốt thời gian lưu trú.
        </p>
        <div class="icon-features">
