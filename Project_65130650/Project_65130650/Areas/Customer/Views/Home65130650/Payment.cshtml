@model IEnumerable<Project_65130650.Models.ThanhToan>

@{
    ViewBag.Title = "Quản lý Thanh toán & Giao dịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var totalSpent = ViewBag.TotalSpent ?? 0;
    var transactionCount = ViewBag.TransactionCount ?? 0;
}

@section Styles {
    <style>
        .payment-stats-card {
            background: white;
            border-radius: 24px;
            padding: 32px;
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .payment-stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(15, 23, 42, 0.08);
        }

        .transaction-row {
            transition: all 0.2s ease;
        }

        .transaction-row:hover {
            background-color: #f8fafc;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            white-space: nowrap;
        }

        .status-success { background: #f0fdf4; color: #16a34a; }
        .status-pending { background: #fffcf0; color: #854d0e; }
        .status-failed { background: #fef2f2; color: #dc2626; }

        .method-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
        }

        .cc-card {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            color: white;
            border-radius: 20px;
            padding: 24px;
            position: relative;
            overflow: hidden;
            width: 100%;
            max-width: 340px;
            aspect-ratio: 1.6 / 1;
        }

        .cc-card::before {
            content: '';
            position: absolute;
            top: -20%;
            right: -20%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }

        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .reveal {
            animation: fadeInUp 0.6s ease forwards;
        }

        /* Mở rộng container ra hết màn hình theo yêu cầu */
        .full-screen-container {
            width: 98% !important;
            max-width: none !important;
            margin-left: auto !important;
            margin-right: auto !important;
        }

        /* Đảm bảo bảng không bị thanh kéo ngang */
        .no-scroll-table {
            min-width: 0 !important;
            width: 100% !important;
        }
    </style>

    <script>
        // Override lại container của layout chính
        document.addEventListener("DOMContentLoaded", function() {
            const mainContainer = document.querySelector('main > div');
            if (mainContainer) {
                mainContainer.classList.remove('w-[85%]', 'mx-auto');
                mainContainer.classList.add('full-screen-container');
            }
        });
    </script>
}

<div class="py-12 px-4 max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-12 reveal">
        <h1 class="text-4xl font-bold text-slate-900 font-outfit mb-3">Thanh toán & Giao dịch</h1>
        <p class="text-slate-500">Xem lại lịch sử thanh toán và quản lý các phương thức của bạn.</p>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16 reveal" style="animation-delay: 0.1s">
        <div class="payment-stats-card">
            <div class="flex items-center gap-4 mb-4">
                <div class="method-icon bg-sky-50 text-sky-600">
                    <i class="fas fa-wallet"></i>
                </div>
                <span class="text-sm font-semibold text-slate-500 uppercase tracking-wider">Tổng đã thanh toán</span>
            </div>
            <div class="text-4xl font-bold text-slate-900">@string.Format("{0:N0}", totalSpent).Replace(",", ".") <span class="text-2xl font-medium">₫</span></div>
            <div class="mt-2 text-xs text-emerald-600 font-medium">
                <i class="fas fa-arrow-up mr-1"></i> Tất cả các phòng & dịch vụ
            </div>
        </div>

        <div class="payment-stats-card">
            <div class="flex items-center gap-4 mb-4">
                <div class="method-icon bg-indigo-50 text-indigo-600">
                    <i class="fas fa-exchange-alt"></i>
                </div>
                <span class="text-sm font-semibold text-slate-500 uppercase tracking-wider">Số lần giao dịch</span>
            </div>
            <div class="text-3xl font-bold text-slate-900">@transactionCount</div>
            <div class="mt-2 text-xs text-slate-500 font-medium">Lịch sử được thống kê toàn bộ</div>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-12 items-start">
        <!-- Transaction History -->
        <div class="reveal" style="animation-delay: 0.2s">
            <div class="bg-white border border-slate-200 rounded-[2rem] overflow-hidden shadow-sm">
                <div class="px-8 py-6 border-b border-slate-100 flex justify-between items-center bg-slate-50/50">
                    <h2 class="text-xl font-bold text-slate-900">Lịch sử giao dịch chi tiết</h2>
                </div>

                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse min-w-[1000px]">
                        <thead>
                            <tr class="text-xs font-bold text-slate-400 uppercase tracking-widest bg-white">
                                <th class="px-8 py-5 whitespace-nowrap">Mã Giao dịch</th>
                                <th class="px-8 py-5 whitespace-nowrap">Nội dung đặt phòng</th>
                                <th class="px-8 py-5 whitespace-nowrap">Ngày thanh toán</th>
                                <th class="px-8 py-5 whitespace-nowrap">Tiền phòng</th>
                                <th class="px-8 py-5 whitespace-nowrap">Tiền dịch vụ</th>
                                <th class="px-8 py-5 whitespace-nowrap">Giảm giá</th>
                                <th class="px-8 py-5 whitespace-nowrap">Thanh toán (Tổng)</th>
                                <th class="px-8 py-5 whitespace-nowrap">PTTT</th>
                                <th class="px-8 py-5 whitespace-nowrap">Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="transaction-row">
                                        <td class="px-8 py-6 whitespace-nowrap">
                                            <div class="flex flex-col">
                                                <span class="font-mono text-sm font-bold text-slate-700">#@item.maGiaoDich</span>
                                                <span class="text-[10px] text-slate-400">@item.maGiaoDich</span>
                                            </div>
                                        </td>
                                        <td class="px-8 py-6 whitespace-nowrap">
                                            <div class="text-sm font-bold text-slate-900">Đơn đặt: @item.maDatPhong</div>
                                        </td>
                                        <td class="px-8 py-6 whitespace-nowrap">
                                            <div class="text-sm text-slate-600">@(item.ngayThanhToan?.ToString("dd/MM/yyyy HH:mm") ?? "-")</div>
                                        </td>
                                        <td class="px-8 py-6 text-sm text-slate-600 whitespace-nowrap">
                                            @string.Format("{0:N0}", item.tienPhong ?? 0).Replace(",", ".") ₫
                                        </td>
                                        <td class="px-8 py-6 text-sm text-slate-600 whitespace-nowrap">
                                            @string.Format("{0:N0}", item.tienDichVu ?? 0).Replace(",", ".") ₫
                                        </td>
                                        <td class="px-8 py-6 text-sm text-rose-500 font-medium whitespace-nowrap">
                                            -@string.Format("{0:N0}", item.giamGia ?? 0).Replace(",", ".") ₫
                                        </td>
                                        <td class="px-8 py-6 whitespace-nowrap">
                                            <div class="text-lg font-bold text-sky-600">@string.Format("{0:N0}", item.soTien).Replace(",", ".") ₫</div>
                                        </td>
                                        <td class="px-8 py-6 text-sm text-slate-600 whitespace-nowrap">
                                            @item.phuongThucThanhToan
                                        </td>
                                        <td class="px-8 py-6 whitespace-nowrap">
                                            @{
                                                var statusClass = "";
                                                var iconClass = "";
                                                var rawStatus = item.trangThaiThanhToan?.ToLower() ?? "";

                                                if (rawStatus.Contains("thành công") || rawStatus.Contains("đã thanh toán")) 
                                                { 
                                                    statusClass = "status-success"; 
                                                    iconClass = "fa-check-circle"; 
                                                }
                                                else if (rawStatus.Contains("chờ") || rawStatus.Contains("xử lý")) 
                                                { 
                                                    statusClass = "status-pending"; 
                                                    iconClass = "fa-clock"; 
                                                }
                                                else 
                                                { 
                                                    statusClass = "status-failed"; 
                                                    iconClass = "fa-times-circle"; 
                                                }
                                            }
                                            <span class="status-badge @statusClass">
                                                <i class="fas @iconClass"></i>
                                                @item.trangThaiThanhToan
                                            </span>
                                        </td>
                                    </tr>
                                    if (!string.IsNullOrEmpty(item.ghiChu))
                                    {
                                        <tr class="bg-indigo-50/30">
                                            <td colspan="9" class="px-8 py-2 text-[11px] text-slate-500 italic">
                                                <i class="fas fa-info-circle mr-1"></i> Ghi chú: @item.ghiChu
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9" class="px-8 py-20 text-center">
                                        <div class="flex flex-col items-center gap-4 text-slate-400">
                                            <i class="fas fa-receipt text-5xl"></i>
                                            <p class="font-medium">Chưa có giao dịch nào được ghi nhận.</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (ViewBag.TotalPages > 1)
                {
                    <div class="px-8 py-5 border-t border-slate-100 flex items-center justify-between bg-white">
                        <div class="text-sm text-slate-500">
                            Hiển thị trang <span class="font-semibold text-slate-900">@ViewBag.CurrentPage</span> / @ViewBag.TotalPages
                        </div>
                        <div class="flex gap-2">
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <a href="@Url.Action("Payment", new { page = ViewBag.CurrentPage - 1 })" 
                                   class="px-4 py-2 bg-white border border-slate-200 rounded-xl text-sm font-bold text-slate-600 hover:bg-slate-50 transition-all flex items-center gap-2">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            }
                            else
                            {
                                <button disabled class="px-4 py-2 bg-slate-50 border border-slate-200 rounded-xl text-sm font-bold text-slate-300 cursor-not-allowed flex items-center gap-2">
                                    <i class="fas fa-chevron-left"></i> 
                                </button>
                            }

                            <div class="flex gap-1">
                                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                {
                                    <a href="@Url.Action("Payment", new { page = i })" 
                                       class="w-10 h-10 flex items-center justify-center rounded-xl text-sm font-bold transition-all @(i == ViewBag.CurrentPage ? "bg-sky-600 text-white shadow-md shadow-sky-100" : "bg-white border border-slate-200 text-slate-600 hover:bg-slate-50")">
                                        @i
                                    </a>
                                }
                            </div>

                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <a href="@Url.Action("Payment", new { page = ViewBag.CurrentPage + 1 })" 
                                   class="px-4 py-2 bg-white border border-slate-200 rounded-xl text-sm font-bold text-slate-600 hover:bg-slate-50 transition-all flex items-center gap-2">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                            else
                            {
                                <button disabled class="px-4 py-2 bg-slate-50 border border-slate-200 rounded-xl text-sm font-bold text-slate-300 cursor-not-allowed flex items-center gap-2">
                                    <i class="fas fa-chevron-right"></i>
                                </button>
                            }
                        </div>
                    </div>
                }
                
                <div class="px-8 py-6 border-t border-slate-100 bg-slate-50/30 text-center">
                    <p class="text-xs text-slate-400 font-medium">Bạn có thắc mắc về giao dịch hoặc cần hỗ trợ chuyên sâu? <a href="@Url.Action("Support", "Home65130650")" class="text-sky-600 hover:underline">Liên hệ bộ phận chăm sóc khách hàng</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
