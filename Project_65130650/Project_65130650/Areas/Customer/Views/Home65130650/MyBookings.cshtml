@section Scripts {
    <script>
        // Show booking details modal
        function showBookingDetails(bookingId) {
            document.getElementById('bookingDetailModal').classList.add('show');
            
            // Fetch booking details
            fetch('@Url.Action("GetBookingDetails", "Home65130650")' + '?id=' + bookingId)
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        renderBookingDetails(result.data);
                    } else {
                        document.getElementById('modalBodyContent').innerHTML = `
                            <div style="text-align: center; padding: 40px; color: #ef4444;">
                                <i class="fas fa-exclamation-circle" style="font-size: 32px;"></i>
                                <p style="margin-top: 16px;">${result.message}</p>
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    document.getElementById('modalBodyContent').innerHTML = `
                        <div style="text-align: center; padding: 40px; color: #ef4444;">
                            <i class="fas fa-exclamation-circle" style="font-size: 32px;"></i>
                            <p style="margin-top: 16px;">Đã xảy ra lỗi khi tải dữ liệu.</p>
                        </div>
                    `;
                });
        }

        function renderBookingDetails(data) {
            const tongTien = data.tienPhong + data.TongTienDichVu;
            // Nếu đơn đã hủy thì còn lại = 0
            const conLai = data.trangThaiDatPhong === 'Đã hủy' ? 0 : (tongTien - data.TongDaThanhToan);
            
            let servicesHtml = '';
            if (data.DichVuDatPhongs && data.DichVuDatPhongs.length > 0) {
                servicesHtml = data.DichVuDatPhongs.map(dv => `
                    <div class="service-item">
                        <div>
                            <div class="service-name">${dv.tenDichVu}</div>
                            <div style="font-size: 11px; color: #94a3b8;">SL: ${dv.soLuong} x ${formatNumber(dv.donGia)} ₫</div>
                        </div>
                        <div class="service-price">${formatNumber(dv.thanhTien)} ₫</div>
                    </div>
                `).join('');
            } else {
                servicesHtml = '<div style="padding: 20px; text-align: center; color: #94a3b8;">Chưa sử dụng dịch vụ nào</div>';
            }

            let paymentsHtml = '';
            if (data.ThanhToans && data.ThanhToans.length > 0) {
                paymentsHtml = data.ThanhToans.map(tt => {
                    const statusClass = tt.trangThaiThanhToan === 'Thành công' ? 'color: #10b981' : 
                                        tt.trangThaiThanhToan === 'Chờ xử lý' ? 'color: #f59e0b' : 'color: #ef4444';
                    return `
                        <div class="service-item">
                            <div>
                                <div class="service-name">${formatDate(tt.ngayThanhToan)}</div>
                                <div style="font-size: 11px; color: #94a3b8;">${tt.phuongThucThanhToan}</div>
                            </div>
                            <div>
                                <div class="service-price">${formatNumber(tt.soTien)} ₫</div>
                                <div style="font-size: 11px; ${statusClass}">${tt.trangThaiThanhToan}</div>
                            </div>
                        </div>
                    `;
                }).join('');
            } else {
                paymentsHtml = '<div style="padding: 20px; text-align: center; color: #94a3b8;">Chưa có thanh toán</div>';
            }

            document.getElementById('modalBodyContent').innerHTML = `
                <div class="modal-section">
                    <div class="modal-section-title">
                        <i class="fas fa-hotel"></i> Thông tin phòng
                    </div>
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="label">Loại phòng</div>
                            <div class="value">${data.Phong.LoaiPhong.tenLoaiPhong}</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Số phòng</div>
                            <div class="value">Phòng ${data.Phong.soPhong} - Tầng ${data.Phong.tang}</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Diện tích</div>
                            <div class="value">${data.Phong.LoaiPhong.dienTichPhong} m²</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Sức chứa</div>
                            <div class="value">Tối đa ${data.Phong.LoaiPhong.soNguoiToiDa} người</div>
                        </div>
                    </div>
                </div>

                <div class="modal-section">
                    <div class="modal-section-title">
                        <i class="fas fa-calendar-check"></i> Thông tin đặt phòng
                    </div>
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="label">Mã đặt phòng</div>
                            <div class="value">#${data.maDatPhong}</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Ngày đặt</div>
                            <div class="value">${formatDate(data.ngayDat)}</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Nhận phòng</div>
                            <div class="value">${formatDate(data.ngayNhanPhong)}</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Trả phòng</div>
                            <div class="value">${formatDate(data.ngayTraPhong)}</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Số khách</div>
                            <div class="value">${data.soKhach} người</div>
                        </div>
                        <div class="info-item">
                            <div class="label">Trạng thái</div>
                            <div class="value">${data.trangThaiDatPhong}</div>
                        </div>
                    </div>
                </div>

                <div class="modal-section">
                    <div class="modal-section-title">
                        <i class="fas fa-concierge-bell"></i> Dịch vụ đã sử dụng
                    </div>
                    <div class="service-list">
                        ${servicesHtml}
                    </div>
                </div>

                <div class="modal-section">
                    <div class="modal-section-title">
                        <i class="fas fa-credit-card"></i> Lịch sử thanh toán
                    </div>
                    <div class="service-list">
                        ${paymentsHtml}
                    </div>
                </div>

                <div class="modal-section">
                    <div class="payment-summary">
                        <div class="summary-row">
                            <span class="summary-label">Tiền phòng</span>
                            <span class="summary-value">${formatNumber(data.tienPhong)} ₫</span>
                        </div>
                        <div class="summary-row">
                            <span class="summary-label">Tiền dịch vụ</span>
                            <span class="summary-value">${formatNumber(data.TongTienDichVu)} ₫</span>
                        </div>
                        <div class="summary-row" style="border-top: 1px solid rgba(255,255,255,0.2); padding-top: 12px; margin-top: 8px;">
                            <span class="summary-label" style="color: white; font-weight: 600;">TỔNG TIỀN</span>
                            <span class="summary-value" style="color: #fbbf24; font-size: 18px;">${formatNumber(tongTien)} ₫</span>
                        </div>
                        <div class="summary-row" style="margin-top: 12px;">
                            <span class="summary-label">Đã thanh toán</span>
                            <span class="summary-value" style="color: #10b981;">${formatNumber(data.TongDaThanhToan)} ₫</span>
                        </div>
                        <div class="summary-row">
                            <span class="summary-label">Còn lại</span>
                            <span class="summary-value" style="color: ${conLai > 0 ? '#f59e0b' : '#10b981'};">${formatNumber(conLai)} ₫</span>
                        </div>
                    </div>
                </div>
            `;
        }

        function closeModal() {
            document.getElementById('bookingDetailModal').classList.remove('show');
        }

        // Cancel booking
        function confirmCancelBooking(bookingId) {
            document.getElementById('cancelBookingId').value = bookingId;
            document.getElementById('cancelReason').value = '';
            document.getElementById('cancelModal').classList.add('show');
        }

        function closeCancelModal() {
            document.getElementById('cancelModal').classList.remove('show');
        }

        function submitCancelBooking() {
            const bookingId = document.getElementById('cancelBookingId').value;
            const reason = document.getElementById('cancelReason').value;
            
            const formData = new FormData();
            formData.append('id', bookingId);
            formData.append('lyDoHuy', reason);
            formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

            fetch('@Url.Action("CancelBooking", "Home65130650")', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(result => {
                closeCancelModal();
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message);
                }
            })
            .catch(error => {
                closeCancelModal();
                alert('Đã xảy ra lỗi. Vui lòng thử lại.');
            });
        }

        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
        }

        // Hàm format ngày từ C# JSON (xử lý cả format /Date(...)/ và ISO string)
        function formatDate(dateValue) {
            if (!dateValue) return '-';
            
            let date;
            
            // Xử lý format /Date(milliseconds)/ từ C# JSON
            if (typeof dateValue === 'string' && dateValue.indexOf('/Date(') > -1) {
                const milliseconds = parseInt(dateValue.replace(/\/Date\((-?\d+)\)\//, '$1'));
                date = new Date(milliseconds);
            } else {
                // Xử lý ISO string hoặc các format khác
                date = new Date(dateValue);
            }
            
            // Kiểm tra date hợp lệ
            if (isNaN(date.getTime())) {
                return '-';
            }
            
            // Format dd/MM/yyyy
            const day = String(date.getDate()).padStart(2, '0');
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const year = date.getFullYear();
            
            return `${day}/${month}/${year}`;
        }

        // Close modal on overlay click
        document.querySelectorAll('.modal-overlay').forEach(modal => {
            modal.addEventListener('click', function(e) {
                if (e.target === this) {
                    this.classList.remove('show');
                }
            });
        });
    </script>
    @Html.AntiForgeryToken()
}
