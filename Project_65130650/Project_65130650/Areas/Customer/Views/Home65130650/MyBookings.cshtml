@model IEnumerable<Project_65130650.Models.DatPhong>

@{
    ViewBag.Title = "Đơn đặt phòng của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var totalBookings = ViewBag.TotalBookings ?? 0;
    var pendingCount = ViewBag.PendingCount ?? 0;
    var confirmedCount = ViewBag.ConfirmedCount ?? 0;
    var checkedInCount = ViewBag.CheckedInCount ?? 0;
    var checkedOutCount = ViewBag.CheckedOutCount ?? 0;
    var cancelledCount = ViewBag.CancelledCount ?? 0;
    var totalSpent = ViewBag.TotalSpent ?? 0;
    var currentStatus = ViewBag.CurrentStatus ?? "all";
}

@section Styles {
    <style>
        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 20px;
            margin-bottom: 32px;
        }

        .stat-card {
            background: white;
            border-radius: 20px;
            padding: 24px;
            border: 1px solid #e2e8f0;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(15, 23, 42, 0.1);
        }

        .stat-card.active {
            border-color: #0ea5e9;
            box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            border-radius: 20px 20px 0 0;
        }

        .stat-card.all::before { background: linear-gradient(90deg, #3b82f6, #8b5cf6); }
        .stat-card.pending::before { background: #f59e0b; }
        .stat-card.confirmed::before { background: #3b82f6; }
        .stat-card.checkedin::before { background: #8b5cf6; }
        .stat-card.checkedout::before { background: #10b981; }
        .stat-card.cancelled::before { background: #ef4444; }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            margin-bottom: 16px;
        }

        .stat-card.all .stat-icon { background: #eff6ff; color: #3b82f6; }
        .stat-card.pending .stat-icon { background: #fffbeb; color: #f59e0b; }
        .stat-card.confirmed .stat-icon { background: #eff6ff; color: #3b82f6; }
        .stat-card.checkedin .stat-icon { background: #f5f3ff; color: #8b5cf6; }
        .stat-card.checkedout .stat-icon { background: #ecfdf5; color: #10b981; }
        .stat-card.cancelled .stat-icon { background: #fef2f2; color: #ef4444; }

        .stat-number {
            font-size: 32px;
            font-weight: 700;
            color: #0f172a;
            line-height: 1;
            margin-bottom: 4px;
        }

        .stat-label {
            font-size: 13px;
            color: #64748b;
            font-weight: 500;
        }

        /* Booking Cards */
        .booking-card {
            background: white;
            border-radius: 24px;
            border: 1px solid #e2e8f0;
            overflow: hidden;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

        .booking-card:hover {
            box-shadow: 0 20px 50px rgba(15, 23, 42, 0.1);
            transform: translateY(-2px);
        }

        .booking-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 24px;
            background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
            border-bottom: 1px solid #e2e8f0;
        }

        .booking-id {
            font-family: 'Monaco', 'Consolas', monospace;
            font-size: 14px;
            font-weight: 700;
            color: #0f172a;
            background: white;
            padding: 6px 12px;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
        }

        .status-badge {
            padding: 8px 16px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-pending { background: #fef3c7; color: #92400e; }
        .status-confirmed { background: #dbeafe; color: #1e40af; }
        .status-checkedin { background: #ede9fe; color: #5b21b6; }
        .status-checkedout { background: #d1fae5; color: #065f46; }
        .status-cancelled { background: #fee2e2; color: #991b1b; }

        .booking-body {
            display: grid;
            grid-template-columns: 200px 1fr;
            gap: 24px;
            padding: 24px;
        }

        .room-image {
            width: 100%;
            height: 160px;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 24px rgba(15, 23, 42, 0.1);
        }

        .room-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .booking-card:hover .room-image img {
            transform: scale(1.05);
        }

        .booking-info {
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .room-name {
            font-size: 20px;
            font-weight: 700;
            color: #0f172a;
            margin: 0;
        }

        .room-number {
            font-size: 13px;
            color: #64748b;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .booking-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 16px;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .detail-label {
            font-size: 11px;
            color: #94a3b8;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
        }

        .detail-value {
            font-size: 14px;
            color: #0f172a;
            font-weight: 600;
        }

        .booking-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px 24px;
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
        }

        .booking-price {
            display: flex;
            flex-direction: column;
        }

        .price-label {
            font-size: 11px;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .price-value {
            font-size: 24px;
            font-weight: 700;
            color: #0ea5e9;
        }

        .booking-actions {
            display: flex;
            gap: 10px;
        }

        .btn-detail, .btn-cancel {
            padding: 10px 20px;
            border-radius: 12px;
            font-size: 13px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

        .btn-detail {
            background: #0ea5e9;
            color: white;
        }

        .btn-detail:hover {
            background: #0284c7;
            transform: translateY(-1px);
        }

        .btn-cancel {
            background: white;
            color: #ef4444;
            border: 1px solid #fecaca;
        }

        .btn-cancel:hover {
            background: #fef2f2;
        }

        .btn-cancel:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 24px;
            border: 1px solid #e2e8f0;
        }

        .empty-state i {
            font-size: 64px;
            color: #cbd5e1;
            margin-bottom: 24px;
        }

        .empty-state h3 {
            font-size: 20px;
            color: #0f172a;
            margin-bottom: 8px;
        }

        .empty-state p {
            color: #64748b;
            margin-bottom: 24px;
        }

        .btn-explore-now {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            padding: 8px 14px;
            background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%);
            color: white;
            border-radius: 8px;
            font-weight: 500;
            font-size: 12px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-explore-now i {
            font-size: 11px;
        }

        .btn-explore-now:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 24px rgba(14, 165, 233, 0.3);
        }

        /* Pagination */
        .pagination-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            margin-top: 32px;
        }

        .page-btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            font-size: 14px;
            font-weight: 600;
            border: 1px solid #e2e8f0;
            background: white;
            color: #64748b;
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .page-btn:hover {
            background: #f1f5f9;
            color: #0f172a;
        }

        .page-btn.active {
            background: #0ea5e9;
            color: white;
            border-color: #0ea5e9;
        }

        .page-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Modal */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(15, 23, 42, 0.6);
            backdrop-filter: blur(4px);
            z-index: 1000;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .modal-overlay.show {
            display: flex;
        }

        .modal-content {
            background: white;
            border-radius: 24px;
            max-width: 700px;
            width: 100%;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 25px 50px rgba(15, 23, 42, 0.25);
            animation: modalSlideIn 0.3s ease;
        }

        @@keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(20px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .modal-header {
            padding: 24px;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h2 {
            font-size: 20px;
            font-weight: 700;
            color: #0f172a;
            margin: 0;
        }

        .modal-close {
            width: 36px;
            height: 36px;
            border-radius: 10px;
            border: none;
            background: #f1f5f9;
            color: #64748b;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
        }

        .modal-close:hover {
            background: #e2e8f0;
            color: #0f172a;
        }

        .modal-body {
            padding: 24px;
        }

        .modal-section {
            margin-bottom: 24px;
        }

        .modal-section-title {
            font-size: 13px;
            font-weight: 700;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 12px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .modal-section-title i {
            color: #0ea5e9;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
        }

        .info-item {
            background: #f8fafc;
            padding: 14px 16px;
            border-radius: 12px;
        }

        .info-item .label {
            font-size: 11px;
            color: #94a3b8;
            text-transform: uppercase;
            letter-spacing: 0.3px;
            margin-bottom: 4px;
        }

        .info-item .value {
            font-size: 14px;
            font-weight: 600;
            color: #0f172a;
        }

        .service-list {
            background: #f8fafc;
            border-radius: 12px;
            overflow: hidden;
        }

        .service-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 16px;
            border-bottom: 1px solid #e2e8f0;
        }

        .service-item:last-child {
            border-bottom: none;
        }

        .service-name {
            font-size: 14px;
            color: #0f172a;
        }

        .service-price {
            font-size: 14px;
            font-weight: 600;
            color: #0ea5e9;
        }

        .payment-summary {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
            border-radius: 16px;
            padding: 20px;
            color: white;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 12px;
            font-size: 14px;
        }

        .summary-row:last-child {
            margin-bottom: 0;
            padding-top: 12px;
            border-top: 1px solid rgba(255,255,255,0.2);
            font-size: 18px;
            font-weight: 700;
        }

        .summary-label {
            color: rgba(255,255,255,0.7);
        }

        .summary-value {
            font-weight: 600;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .booking-body {
                grid-template-columns: 1fr;
            }

            .room-image {
                height: 200px;
            }

            .booking-footer {
                flex-direction: column;
                gap: 16px;
                align-items: stretch;
            }

            .booking-actions {
                justify-content: stretch;
            }

            .booking-actions .btn-detail,
            .booking-actions .btn-cancel {
                flex: 1;
                justify-content: center;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Animation */
        .reveal {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease forwards;
        }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

<div class="py-12 px-4 max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-10 reveal">
        <h1 class="text-4xl font-bold text-slate-900 font-outfit mb-3">Đơn đặt phòng của tôi</h1>
        <p class="text-slate-500">Theo dõi và quản lý tất cả các lần đặt phòng của bạn tại Shearaton.</p>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid reveal" style="animation-delay: 0.1s">
        <a href="@Url.Action("MyBookings", new { status = "all" })" class="stat-card all @(currentStatus == "all" ? "active" : "")">
            <div class="stat-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="stat-number">@totalBookings</div>
            <div class="stat-label">Tất cả đơn</div>
        </a>
        
        <a href="@Url.Action("MyBookings", new { status = "Chờ xác nhận" })" class="stat-card pending @(currentStatus == "Chờ xác nhận" ? "active" : "")">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="stat-number">@pendingCount</div>
            <div class="stat-label">Chờ xác nhận</div>
        </a>

        <a href="@Url.Action("MyBookings", new { status = "Đã xác nhận" })" class="stat-card confirmed @(currentStatus == "Đã xác nhận" ? "active" : "")">
            <div class="stat-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-number">@confirmedCount</div>
            <div class="stat-label">Đã xác nhận</div>
        </a>

        <a href="@Url.Action("MyBookings", new { status = "Đã nhận phòng" })" class="stat-card checkedin @(currentStatus == "Đã nhận phòng" ? "active" : "")">
            <div class="stat-icon">
                <i class="fas fa-door-open"></i>
            </div>
            <div class="stat-number">@checkedInCount</div>
            <div class="stat-label">Đang ở</div>
        </a>

        <a href="@Url.Action("MyBookings", new { status = "Đã trả phòng" })" class="stat-card checkedout @(currentStatus == "Đã trả phòng" ? "active" : "")">
            <div class="stat-icon">
                <i class="fas fa-check-double"></i>
            </div>
            <div class="stat-number">@checkedOutCount</div>
            <div class="stat-label">Hoàn thành</div>
        </a>

        <a href="@Url.Action("MyBookings", new { status = "Đã hủy" })" class="stat-card cancelled @(currentStatus == "Đã hủy" ? "active" : "")">
            <div class="stat-icon">
                <i class="fas fa-times-circle"></i>
            </div>
            <div class="stat-number">@cancelledCount</div>
            <div class="stat-label">Đã hủy</div>
        </a>
    </div>

    <!-- Bookings List -->
    <div class="reveal" style="animation-delay: 0.2s">
        @if (Model != null && Model.Any())
        {
            foreach (var booking in Model)
            {
                var statusClass = "";
                var statusIcon = "";
                switch (booking.trangThaiDatPhong)
                {
                    case "Chờ xác nhận":
                        statusClass = "status-pending";
                        statusIcon = "fa-clock";
                        break;
                    case "Đã xác nhận":
                        statusClass = "status-confirmed";
                        statusIcon = "fa-check-circle";
                        break;
                    case "Đã nhận phòng":
                        statusClass = "status-checkedin";
                        statusIcon = "fa-door-open";
                        break;
                    case "Đã trả phòng":
                        statusClass = "status-checkedout";
                        statusIcon = "fa-check-double";
                        break;
                    case "Đã hủy":
                        statusClass = "status-cancelled";
                        statusIcon = "fa-times-circle";
                        break;
                }

                var imagePath = "~/Images/phonghangsang.jpeg";
                if (booking.Phong?.LoaiPhong?.hinhAnh != null)
                {
                    var firstImage = booking.Phong.LoaiPhong.hinhAnh.Split(',', ';')[0].Trim();
                    if (firstImage.StartsWith("~/"))
                    {
                        imagePath = firstImage;
                    }
                    else if (!firstImage.Contains("/"))
                    {
                        imagePath = "~/Images/" + firstImage;
                    }
                }

                var soNgay = (booking.ngayTraPhong - booking.ngayNhanPhong).Days;
                
                <div class="booking-card">
                    <div class="booking-header">
                        <div style="display: flex; align-items: center; gap: 16px;">
                            <span class="booking-id">#@booking.maDatPhong</span>
                            <span style="font-size: 13px; color: #64748b;">
                                <i class="fas fa-calendar-plus" style="margin-right: 4px;"></i>
                                Đặt ngày @(booking.ngayDat?.ToString("dd/MM/yyyy") ?? "-")
                            </span>
                        </div>
                        <span class="status-badge @statusClass">
                            <i class="fas @statusIcon"></i>
                            @booking.trangThaiDatPhong
                        </span>
                    </div>
                    
                    <div class="booking-body">
                        <div class="room-image">
                            <img src="@Url.Content(imagePath)" alt="@booking.Phong?.LoaiPhong?.tenLoaiPhong" />
                        </div>
                        
                        <div class="booking-info">
                            <div>
                                <h3 class="room-name">@(booking.Phong?.LoaiPhong?.tenLoaiPhong ?? "N/A")</h3>
                                <div class="room-number">
                                    <i class="fas fa-door-closed"></i>
                                    Phòng @(booking.Phong?.soPhong ?? "N/A") - Tầng @(booking.Phong?.tang ?? 0)
                                </div>
                            </div>
                            
                            <div class="booking-details">
                                <div class="detail-item">
                                    <span class="detail-label">Nhận phòng</span>
                                    <span class="detail-value">
                                        <i class="fas fa-sign-in-alt" style="color: #10b981; margin-right: 4px;"></i>
                                        @booking.ngayNhanPhong.ToString("dd/MM/yyyy")
                                    </span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Trả phòng</span>
                                    <span class="detail-value">
                                        <i class="fas fa-sign-out-alt" style="color: #ef4444; margin-right: 4px;"></i>
                                        @booking.ngayTraPhong.ToString("dd/MM/yyyy")
                                    </span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Số đêm</span>
                                    <span class="detail-value">
                                        <i class="fas fa-moon" style="color: #8b5cf6; margin-right: 4px;"></i>
                                        @soNgay đêm
                                    </span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Số khách</span>
                                    <span class="detail-value">
                                        <i class="fas fa-users" style="color: #0ea5e9; margin-right: 4px;"></i>
                                        @booking.soKhach người
                                    </span>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(booking.yeuCauDacBiet))
                            {
                                <div style="background: #fef3c7; padding: 10px 14px; border-radius: 10px; font-size: 13px; color: #92400e;">
                                    <i class="fas fa-sticky-note" style="margin-right: 6px;"></i>
                                    @booking.yeuCauDacBiet
                                </div>
                            }

                            @if (booking.trangThaiDatPhong == "Đã hủy" && !string.IsNullOrEmpty(booking.lyDoHuy))
                            {
                                <div style="background: #fee2e2; padding: 10px 14px; border-radius: 10px; font-size: 13px; color: #991b1b;">
                                    <i class="fas fa-info-circle" style="margin-right: 6px;"></i>
                                    Lý do hủy: @booking.lyDoHuy
                                </div>
                            }
                        </div>
                    </div>
                    
                    <div class="booking-footer">
                        @{
                            var tongTienDichVu = booking.DichVuDatPhongs?.Sum(dv => dv.thanhTien) ?? 0;
                            var tongTien = booking.tienPhong + tongTienDichVu;
                        }
                        <div class="booking-price">
                            <span class="price-label">Tổng tiền</span>
                            <span class="price-value">@string.Format("{0:N0}", tongTien).Replace(",", ".") ₫</span>
                        </div>
                        
                        <div class="booking-actions">
                            <button class="btn-detail" onclick="showBookingDetails('@booking.maDatPhong')">
                                <i class="fas fa-eye"></i>
                                Xem chi tiết
                            </button>
                            @if (booking.trangThaiDatPhong == "Chờ xác nhận")
                            {
                                <button class="btn-cancel" onclick="confirmCancelBooking('@booking.maDatPhong')">
                                    <i class="fas fa-times"></i>
                                    Hủy đơn
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Pagination -->
            if (ViewBag.TotalPages > 1)
            {
                <div class="pagination-container">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a href="@Url.Action("MyBookings", new { page = ViewBag.CurrentPage - 1, status = currentStatus })" class="page-btn">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    }
                    else
                    {
                        <button class="page-btn" disabled><i class="fas fa-chevron-left"></i></button>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <a href="@Url.Action("MyBookings", new { page = i, status = currentStatus })" 
                           class="page-btn @(i == ViewBag.CurrentPage ? "active" : "")">@i</a>
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a href="@Url.Action("MyBookings", new { page = ViewBag.CurrentPage + 1, status = currentStatus })" class="page-btn">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    }
                    else
                    {
                        <button class="page-btn" disabled><i class="fas fa-chevron-right"></i></button>
                    }
                </div>
            }
        }
        else
        {
            // Hiển thị thông báo phù hợp với bộ lọc trạng thái
            string emptyTitle = "Chưa có đơn đặt phòng nào";
            string emptyMessage = "Bạn chưa có lịch sử đặt phòng. Hãy khám phá các phòng tuyệt vời của chúng tôi!";
            string emptyIcon = "fa-calendar-times";
            bool showBookButton = true;

            switch (currentStatus)
            {
                case "Chờ xác nhận":
                    emptyTitle = "Chưa có đơn chờ xác nhận";
                    emptyMessage = "Hiện tại bạn không có đơn đặt phòng nào đang chờ xác nhận.";
                    emptyIcon = "fa-clock";
                    showBookButton = false;
                    break;
                case "Đã xác nhận":
                    emptyTitle = "Chưa có đơn đã xác nhận";
                    emptyMessage = "Hiện tại bạn không có đơn đặt phòng nào đã được xác nhận.";
                    emptyIcon = "fa-check-circle";
                    showBookButton = false;
                    break;
                case "Đã nhận phòng":
                    emptyTitle = "Không có đơn đang ở";
                    emptyMessage = "Hiện tại bạn không có đơn đặt phòng nào đang trong thời gian lưu trú.";
                    emptyIcon = "fa-door-open";
                    showBookButton = false;
                    break;
                case "Đã trả phòng":
                    emptyTitle = "Chưa có đơn hoàn thành";
                    emptyMessage = "Bạn chưa có đơn đặt phòng nào đã hoàn thành. Hãy đặt phòng ngay!";
                    emptyIcon = "fa-check-double";
                    showBookButton = true;
                    break;
                case "Đã hủy":
                    emptyTitle = "Không có đơn đã hủy";
                    emptyMessage = "Bạn không có đơn đặt phòng nào đã bị hủy.";
                    emptyIcon = "fa-times-circle";
                    showBookButton = false;
                    break;
            }

            <div class="empty-state">
                <i class="fas @emptyIcon"></i>
                <h3>@emptyTitle</h3>
                <p>@emptyMessage</p>
                @if (showBookButton)
                {
                    <a href="@Url.Action("Index", "Room65130650", new { area = "" })" class="btn-explore-now">
                        Khám phá phòng ngay
                    </a>
                }
                else
                {
                    <button type="button" 
                            onclick="window.location.href='@Url.Action("MyBookings", "Home65130650", new { area = "Customer", status = "all" })'" 
                            class="btn-explore-now" 
                            style="background: linear-gradient(135deg, #64748b 0%, #475569 100%); cursor: pointer; border: none; outline: none;">
                        Xem tất cả đơn
                    </button>
                }
            </div>
        }
    </div>
</div>

