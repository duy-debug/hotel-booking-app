@model IEnumerable<Project_65130650.Models.LoaiPhong>
@{
    ViewBag.Title = "Quản lý Loại phòng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <div class="page-header">
        <div class="header-content">
            <h1><i class="fas fa-th-large"></i> Quản lý Loại phòng</h1>
            <p>Danh sách các loại phòng trong khách sạn</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm loại phòng
            </button>
        </div>
    </div>

    <div class="content-card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="room-types-grid">
                    @foreach (var roomType in Model)
                    {
                        <div class="room-type-card">
                            <div class="card-header-custom">
                                <h3>@roomType.tenLoaiPhong</h3>
                                <span class="price">@String.Format("{0:N0}", roomType.giaCoBan) VNĐ/đêm</span>
                            </div>
                            <div class="card-body-custom">
                                <div class="info-row">
                                    <i class="fas fa-users"></i>
                                    <span>Sức chứa: @roomType.soNguoiToiDa người</span>
                                </div>
                                <div class="info-row">
                                    <i class="fas fa-expand"></i>
                                    <span>Diện tích: @(roomType.dienTichPhong ?? 0) m²</span>
                                </div>
                                <div class="description">
                                    @(roomType.moTa ?? "Chưa có mô tả")
                                </div>
                            </div>
                            <div class="card-footer-custom">
                                <button class="btn-icon btn-info"><i class="fas fa-eye"></i></button>
                                <button class="btn-icon btn-warning"><i class="fas fa-edit"></i></button>
                                <button class="btn-icon btn-danger"><i class="fas fa-trash"></i></button>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-th-large"></i>
                    <p>Chưa có loại phòng nào</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-container { padding: 30px; }
        .page-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 30px; }
        .header-content h1 { font-size: 28px; font-weight: 700; color: #111827; margin: 0 0 8px 0; display: flex; align-items: center; gap: 12px; }
        .header-content h1 i { color: #4f46e5; }
        .header-content p { color: #6b7280; margin: 0; }
        .btn { padding: 10px 20px; border-radius: 8px; border: none; font-weight: 600; cursor: pointer; transition: all 0.3s ease; display: inline-flex; align-items: center; gap: 8px; }
        .btn-primary { background: #4f46e5; color: white; }
        .btn-primary:hover { background: #4338ca; transform: translateY(-2px); box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3); }
        .content-card { background: white; border-radius: 16px; box-shadow: 0 4px 20px rgba(15, 23, 42, 0.08); overflow: hidden; }
        .card-body { padding: 30px; }
        .room-types-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 24px; }
        .room-type-card { background: white; border: 2px solid #e5e7eb; border-radius: 12px; overflow: hidden; transition: all 0.3s ease; }
        .room-type-card:hover { transform: translateY(-4px); box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1); border-color: #4f46e5; }
        .card-header-custom { padding: 24px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; }
        .card-header-custom h3 { margin: 0 0 8px 0; font-size: 20px; font-weight: 700; }
        .price { font-size: 18px; font-weight: 600; }
        .card-body-custom { padding: 20px; }
        .info-row { display: flex; align-items: center; gap: 10px; margin-bottom: 12px; color: #6b7280; }
        .info-row i { color: #4f46e5; width: 20px; }
        .description { margin-top: 16px; padding-top: 16px; border-top: 1px solid #e5e7eb; color: #6b7280; font-size: 14px; line-height: 1.6; }
        .card-footer-custom { padding: 16px 20px; border-top: 1px solid #e5e7eb; display: flex; justify-content: center; gap: 8px; }
        .btn-icon { width: 36px; height: 36px; border-radius: 8px; border: none; cursor: pointer; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease; }
        .btn-icon.btn-info { background: #dbeafe; color: #2563eb; }
        .btn-icon.btn-info:hover { background: #2563eb; color: white; }
        .btn-icon.btn-warning { background: #fef3c7; color: #d97706; }
        .btn-icon.btn-warning:hover { background: #d97706; color: white; }
        .btn-icon.btn-danger { background: #fee2e2; color: #dc2626; }
        .btn-icon.btn-danger:hover { background: #dc2626; color: white; }
        .empty-state { text-align: center; padding: 60px 20px; color: #9ca3af; }
        .empty-state i { font-size: 48px; margin-bottom: 16px; display: block; }
    </style>
}
