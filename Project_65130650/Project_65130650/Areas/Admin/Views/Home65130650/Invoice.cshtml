@model Project_65130650.Models.DatPhong
@{
    Layout = null; // Không dùng layout chung của admin
    decimal totalService = ViewBag.TotalService;
    decimal totalPaid = ViewBag.TotalPaid;
    decimal totalAmount = Model.tienPhong + totalService;
    decimal balance = totalAmount - totalPaid;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Hóa đơn @Model.maDatPhong - Khách sạn Sheraton</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <style>
        body { font-family: 'Times New Roman', serif; color: #333; margin: 0; padding: 20px; background: #f0f2f5; }
        .invoice-box {
            max-width: 800px; margin: auto; padding: 30px; border: 1px solid #eee; background: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.15); font-size: 16px; line-height: 24px;
        }
        .invoice-box table { width: 100%; line-height: inherit; text-align: left; border-collapse: collapse; }
        .invoice-box table td { padding: 5px; vertical-align: top; }
        .invoice-box table tr td:nth-child(2) { text-align: right; }
        .top-title { font-size: 45px; line-height: 45px; color: #333; margin-bottom: 20px; }
        .hotel-info { margin-bottom: 20px; }
        .heading td { background: #eee; border-bottom: 1px solid #ddd; font-weight: bold; }
        .item td { border-bottom: 1px solid #eee; }
        .item.last td { border-bottom: none; }
        .total td:nth-child(2) { border-top: 2px solid #eee; font-weight: bold; }

        .btn-print {
            display: inline-block; padding: 10px 20px; background: #4f46e5; color: white;
            text-decoration: none; border-radius: 5px; font-family: sans-serif; font-weight: bold;
            margin-bottom: 20px; cursor: pointer; border: none;
        }
        .btn-print:hover { background: #4338ca; }

        @@media print {
            body { background: white; padding: 0; }
            .invoice-box { box-shadow: none; border: none; padding: 0; margin: 0; }
            .no-print { display: none !important; }
        }
    </style>
</head>
<body>
    <div style="text-align: center;" class="no-print">
        <button onclick="window.print()" class="btn-print"><i class="fas fa-print"></i> In Hóa Đơn</button>
    </div>

    <div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <td class="title">
                                <img src="/Images/logo.png" style="width: 100%; max-width: 200px;" alt="SHERATON Nha Trang Hotel" />
                            </td>
                            <td>
                                <strong>HÓA ĐƠN: #@Model.maDatPhong</strong><br>
                                Ngày lập: @DateTime.Now.ToString("dd/MM/yyyy")<br>
                                Thu ngân: @ViewBag.AdminName
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="information">
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                <strong>Khách sạn Sheraton Nha Trang</strong><br>
                                26-28 Trần Phú, Lộc Thọ<br>
                                Thành phố Nha Trang, Khánh Hòa
                            </td>
                            <td>
                                <strong>Khách hàng: @(Model.NguoiDung?.hoTen ?? "Khách vãng lai")</strong><br>
                                @(Model.NguoiDung?.soDienThoai ?? "")<br>
                                @(Model.NguoiDung?.email ?? "")
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="heading">
                <td>Thông tin phòng</td>
                <td>Chi phí</td>
            </tr>

            <tr class="item">
                <td>
                    Phòng: <strong>@(Model.Phong?.soPhong ?? "N/A")</strong> - @(Model.Phong?.LoaiPhong?.tenLoaiPhong ?? "")<br>
                    <small>Check-in: @Model.ngayNhanPhong.ToString("dd/MM/yyyy") | Check-out: @Model.ngayTraPhong.ToString("dd/MM/yyyy")</small><br>
                    <small>Giá: @(Model.Phong?.LoaiPhong?.giaCoBan.ToString("N0") ?? "0") ₫/đêm</small>
                </td>
                <td>@Model.tienPhong.ToString("N0") ₫</td>
            </tr>

            @if (Model.DichVuDatPhongs != null && Model.DichVuDatPhongs.Any())
            {
                <tr class="heading">
                    <td>Dịch vụ sử dụng</td>
                    <td>Thành tiền</td>
                </tr>
                foreach (var dv in Model.DichVuDatPhongs)
                {
                    <tr class="item">
                        <td>
                            @dv.DichVu.tenDichVu <small>(@dv.donGia.ToString("N0") x @dv.soLuong)</small>
                        </td>
                        <td>@dv.thanhTien.ToString("N0") ₫</td>
                    </tr>
                }
            }

            <tr class="total">
                <td></td>
                <td>
                    Tổng cộng: @totalAmount.ToString("N0") ₫
                </td>
            </tr>
            <tr class="total" style="color: #16a34a;">
                <td></td>
                <td>
                    Đã thanh toán: @totalPaid.ToString("N0") ₫
                </td>
            </tr>
            <tr class="total" style="color: #dc2626; font-size: 18px;">
                <td></td>
                <td>
                    Còn lại: @balance.ToString("N0") ₫
                </td>
            </tr>
        </table>

        <div style="margin-top: 20px; text-align: center; display: flex; justify-content: space-around;">
            <div>
                <strong>Người lập phiếu</strong><br>
                <small><i>(Ký và ghi rõ họ tên)</i></small>
            </div>
            <div>
                <strong>Khách hàng</strong><br>
                <small><i>(Ký và ghi rõ họ tên)</i></small>
            </div>
        </div>
        <div style="margin-top: 95px; text-align: center; color: #888; font-size: 12px; border-top: 1px solid #eee; padding-top: 10px;">
            Cảm ơn quý khách đã sử dụng dịch vụ tại Sheraton Nha Trang Hotel!<br>
            Hẹn gặp lại quý khách!
        </div>
    </div>
</body>
</html>
