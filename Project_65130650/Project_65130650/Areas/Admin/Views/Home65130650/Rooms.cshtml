@model IEnumerable<Project_65130650.Models.Phong>
@{
    ViewBag.Title = "Quản lý Phòng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <div class="page-header">
        <div class="header-content">
            <h1><i class="fas fa-door-open"></i> Quản lý Phòng</h1>
            <p>Danh sách tất cả các phòng trong khách sạn</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm phòng mới
            </button>
        </div>
    </div>

    <div class="stats-row">
        <div class="stat-box stat-blue">
            <i class="fas fa-door-open"></i>
            <div>
                <div class="stat-number">@Model.Count()</div>
                <div class="stat-label">Tổng số phòng</div>
            </div>
        </div>
        <div class="stat-box stat-green">
            <i class="fas fa-check-circle"></i>
            <div>
                <div class="stat-number">@Model.Count(p => p.trangThai == "Trống")</div>
                <div class="stat-label">Phòng trống</div>
            </div>
        </div>
        <div class="stat-box stat-orange">
            <i class="fas fa-bed"></i>
            <div>
                <div class="stat-number">@Model.Count(p => p.trangThai == "Đang sử dụng")</div>
                <div class="stat-label">Đang sử dụng</div>
            </div>
        </div>
        <div class="stat-box stat-purple">
            <i class="fas fa-tools"></i>
            <div>
                <div class="stat-number">@Model.Count(p => p.trangThai == "Đang bảo trì")</div>
                <div class="stat-label">Đang bảo trì</div>
            </div>
        </div>
    </div>

    <div class="content-card">
        <div class="card-body">
            <div class="table-controls">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="searchInput" placeholder="Tìm kiếm theo số phòng, loại phòng...">
                </div>
                <div class="filter-group">
                    <select id="statusFilter" class="form-select">
                        <option value="">Tất cả trạng thái</option>
                        <option value="Trống">Trống</option>
                        <option value="Đang sử dụng">Đang sử dụng</option>
                        <option value="Đang bảo trì">Đang bảo trì</option>
                    </select>
                    <select id="floorFilter" class="form-select">
                        <option value="">Tất cả tầng</option>
                        @for (int i = 1; i <= 10; i++)
                        {
                            <option value="@i">Tầng @i</option>
                        }
                    </select>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="rooms-grid">
                    @foreach (var room in Model)
                    {
                        var statusClass = "room-available";
                        var statusIcon = "fa-check-circle";
                        if (room.trangThai == "Đang sử dụng") 
                        { 
                            statusClass = "room-occupied"; 
                            statusIcon = "fa-bed";
                        }
                        else if (room.trangThai == "Đang bảo trì") 
                        { 
                            statusClass = "room-maintenance"; 
                            statusIcon = "fa-tools";
                        }

                        <div class="room-card @statusClass" data-floor="@room.tang" data-status="@room.trangThai">
                            <div class="room-header">
                                <div class="room-number">@room.soPhong</div>
                                <div class="room-status">
                                    <i class="fas @statusIcon"></i>
                                    <span>@room.trangThai</span>
                                </div>
                            </div>
                            <div class="room-body">
                                <div class="room-info">
                                    <div class="info-item">
                                        <i class="fas fa-layer-group"></i>
                                        <span>Tầng @room.tang</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-tag"></i>
                                        <span>@(room.LoaiPhong != null ? room.LoaiPhong.tenLoaiPhong : "N/A")</span>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-dollar-sign"></i>
                                        <span>@String.Format("{0:N0}", room.LoaiPhong != null ? room.LoaiPhong.giaCoBan : 0) VNĐ/đêm</span>
                                    </div>
                                </div>
                            </div>
                            <div class="room-footer">
                                <button class="btn-icon btn-info" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button class="btn-icon btn-warning" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn-icon btn-success" title="Đổi trạng thái">
                                    <i class="fas fa-sync-alt"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-door-closed"></i>
                    <p>Chưa có phòng nào</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-container {
            padding: 30px;
        }

