    @model IEnumerable<Project_65130650.Models.NguoiDung>
    @{
        ViewBag.Title = "Quản lý Người dùng";
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }

    <div class="page-container">
        <div class="page-header">
            <div class="header-content">
                <h3>Danh sách tất cả người dùng trong hệ thống</h3>
            </div>
            <div class="header-actions">
                <button class="btn btn-primary" onclick="openAddModal()">
                    <i class="fas fa-user-plus"></i> Thêm người dùng
                </button>
            </div>
        </div>

        <div class="stats-row">
            <div class="stat-box stat-blue">
                <i class="fas fa-users"></i>
                <div>
                    <div class="stat-number">@ViewBag.TotalUsers</div>
                    <div class="stat-label">Tổng người dùng</div>
                </div>
            </div>
            <div class="stat-box stat-green">
                <i class="fas fa-user-shield"></i>
                <div>
                    <div class="stat-number">@ViewBag.TotalAdmins</div>
                    <div class="stat-label">Quản trị viên</div>
                </div>
            </div>
            <div class="stat-box stat-purple">
                <i class="fas fa-user"></i>
                <div>
                    <div class="stat-number">@ViewBag.TotalCustomers</div>
                    <div class="stat-label">Khách hàng</div>
                </div>
            </div>
            <div class="stat-box stat-orange">
                <i class="fas fa-user-check"></i>
                <div>
                    <div class="stat-number">@ViewBag.TotalActive</div>
                    <div class="stat-label">Đang hoạt động</div>
                </div>
            </div>
            <div class="stat-box stat-red">
                <i class="fas fa-user-times"></i>
                <div>
                    <div class="stat-number">@ViewBag.TotalInactive</div>
                    <div class="stat-label">Ngừng hoạt động</div>
                </div>
            </div>
        </div>

        <div class="content-card">
            <div class="card-body">
                <div class="table-controls">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="searchInput" value="@ViewBag.Search" placeholder="Tìm kiếm theo tên, email, số điện thoại">
                    </div>
                    <div class="filter-group">
                        <!-- Role Dropdown -->
                        <div class="custom-dropdown" id="roleDropdownWrapper">
                            <button class="dropdown-btn">
                                <span class="selected-text" id="roleText">
                                    @(ViewBag.Role == "Quản trị" ? "Quản trị" : 
                                      ViewBag.Role == "Khách hàng" ? "Khách hàng" : "Tất cả vai trò")
                                </span>
                                <i class="fas fa-chevron-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a href="javascript:void(0)" class="filter-option" data-type="role" data-value="" data-text="Tất cả vai trò">Tất cả vai trò</a>
                                <a href="javascript:void(0)" class="filter-option" data-type="role" data-value="Quản trị" data-text="Quản trị">Quản trị</a>
                                <a href="javascript:void(0)" class="filter-option" data-type="role" data-value="Khách hàng" data-text="Khách hàng">Khách hàng</a>
                            </div>
                            <input type="hidden" id="roleFilter" value="@ViewBag.Role">
                        </div>

                        <!-- Status Dropdown -->
                        <div class="custom-dropdown" id="statusDropdownWrapper">
                            <button class="dropdown-btn">
                                <span class="selected-text" id="statusText">
                                    @(ViewBag.Status == "active" ? "Đang hoạt động" : 
                                      ViewBag.Status == "inactive" ? "Ngừng hoạt động" : "Tất cả trạng thái")
                                </span>
                                <i class="fas fa-chevron-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a href="javascript:void(0)" class="filter-option" data-type="status" data-value="" data-text="Tất cả trạng thái">Tất cả trạng thái</a>
                                <a href="javascript:void(0)" class="filter-option" data-type="status" data-value="active" data-text="Đang hoạt động">Đang hoạt động</a>
                                <a href="javascript:void(0)" class="filter-option" data-type="status" data-value="inactive" data-text="Ngừng hoạt động">Ngừng hoạt động</a>
                            </div>
                            <input type="hidden" id="statusFilter" value="@ViewBag.Status">
                        </div>
                    </div>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="data-table" id="usersTable">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Vai trò</th>
                                    <th>Ngày tạo</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int stt = 1;
                                }
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td><span class="badge badge-primary">@stt</span></td>
                                        <td>
                                            <div class="user-info">
                                                <div class="user-avatar">
                                                    @user.hoTen.Substring(0, 1).ToUpper()
                                                </div>
                                                <strong>@user.hoTen</strong>
                                            </div>
                                        </td>
                                        <td>@user.email</td>
                                        <td>@user.soDienThoai</td>
                                        <td>
                                            @if (user.vaiTro == "Quản trị")
                                            {
                                                <span class="badge badge-danger"><i class="fas fa-user-shield"></i> @user.vaiTro</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-info"><i class="fas fa-user"></i> @user.vaiTro</span>
                                            }
                                        </td>
                                        <td>@String.Format("{0:dd/MM/yyyy}", user.ngayTao)</td>
                                        <td>
                                            @if (user.trangThaiHoatDong == true || user.trangThaiHoatDong == null)
                                            {
                                                <span class="badge badge-success"><i class="fas fa-check-circle"></i> Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary"><i class="fas fa-ban"></i> Ngừng</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <button class="btn-icon btn-info" title="Xem chi tiết" onclick="viewUser('@user.maNguoiDung')">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn-icon btn-warning" title="Chỉnh sửa" onclick="editUser('@user.maNguoiDung')">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                @if (user.trangThaiHoatDong == true || user.trangThaiHoatDong == null)
                                                {
                                                    <button class="btn-icon btn-danger" title="Vô hiệu hóa" onclick="toggleStatus('@user.maNguoiDung')">
                                                        <i class="fas fa-ban"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn-icon btn-success" title="Kích hoạt" onclick="toggleStatus('@user.maNguoiDung')">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                    stt++;
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination Controls -->
                    if (ViewBag.TotalPages > 1)
                    {
                        <div class="pagination-wrapper">

                            <div class="pagination-controls">
                                @if (ViewBag.CurrentPage > 1)
                                {
                                    <a href="@Url.Action("Users", new { page = ViewBag.CurrentPage - 1, search = ViewBag.Search, role = ViewBag.Role, status = ViewBag.Status })" class="pagination-btn prev">
                                        <i class="fas fa-angle-left"></i>
                                    </a>
                                }

                                @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                                {
                                    if (i == ViewBag.CurrentPage)
                                    {
                                        <span class="pagination-btn current">@i</span>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Users", new { page = i, search = ViewBag.Search, role = ViewBag.Role, status = ViewBag.Status })" class="pagination-btn">@i</a>
                                    }
                                }

                                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                {
                                    <a href="@Url.Action("Users", new { page = ViewBag.CurrentPage + 1, search = ViewBag.Search, role = ViewBag.Role, status = ViewBag.Status })" class="pagination-btn next">
                                        <i class="fas fa-angle-right"></i>
                                    </a>
                                    }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-users-slash"></i>
                        <p>Chưa có người dùng nào</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Modal Thêm/Sửa Người dùng -->
    <div id="userModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Thêm người dùng</h3>
                <span class="close" onclick="closeModal()">&times;</span>
            </div>
            <div class="modal-body">
                <form id="userForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="maNguoiDung" name="maNguoiDung">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Họ tên <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="hoTen" name="hoTen" placeholder="Nhập họ tên" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" id="soDienThoai" name="soDienThoai" placeholder="Nhập số điện thoại">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Giới tính</label>
                            <select class="form-control" id="gioiTinh" name="gioiTinh">
                                <option value="">-- Chọn --</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                                <option value="Khác">Khác</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Ngày sinh</label>
                            <input type="date" class="form-control" id="ngaySinh" name="ngaySinh" placeholder="Nhập ngày sinh">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input type="text" class="form-control" id="diaChi" name="diaChi" placeholder="Nhập địa chỉ">
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Vai trò <span class="text-danger">*</span></label>
                            <select class="form-control" id="maVaiTro" name="maVaiTro" required>
                                <option value="KH">Khách hàng</option>
                                <option value="QT">Quản trị</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6" id="passwordGroup">
                            <label>Mật khẩu <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="matKhau" name="matKhau">
                        </div>
                    </div>
                    <div class="text-right mt-3">
                        <button type="button" class="btn btn-secondary" onclick="closeModal()">Hủy</button>
                        <button type="submit" class="btn btn-primary" id="submitBtn">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Xem Chi tiết -->
    <div id="viewModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Chi tiết Người dùng</h3>
                <span class="close" onclick="closeViewModal()">&times;</span>
            </div>
            <div class="modal-body">
                <div class="detail-grid" id="userDetails">
                    <!-- Content loaded via JS -->
                </div>
                <!-- Booking History Section -->
                <div id="bookingHistorySection" style="margin-top: 20px; display: none; border-top: 1px solid #eee; padding-top: 15px;">
                    <h4 style="margin-bottom: 15px; font-size: 16px; color: #111827;">Lịch sử đặt phòng gần đây</h4>
                    <div class="table-responsive">
                        <table class="data-table" style="font-size: 13px;">
                            <thead>
                                <tr>
                                    <th style="padding: 8px;">Mã ĐP</th>
                                    <th style="padding: 8px;">Phòng</th>
                                    <th style="padding: 8px;">Ngày đặt</th>
                                    <th style="padding: 8px;">Nhận - Trả</th>
                                    <th style="padding: 8px;">Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody id="bookingHistoryBody"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Styles {
        <style>
            .page-container {
                padding: 30px;
            }

            .page-header {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                margin-bottom: 30px;
            }

            .header-content h1 {
                font-size: 28px;
                font-weight: 700;
                color: #111827;
                margin: 0 0 8px 0;
                display: flex;
                align-items: center;
                gap: 12px;
            }

                .header-content h1 i {
                    color: #4f46e5;
                }

            .header-content p {
                color: #6b7280;
                margin: 0;
            }

            .stats-row {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
                gap: 20px;
                margin-bottom: 30px;
            }

            .stat-box {
                background: white;
                padding: 24px;
                border-radius: 12px;
                display: flex;
                align-items: center;
                gap: 16px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
                transition: all 0.3s ease;
            }

                .stat-box:hover {
                    transform: translateY(-4px);
                    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
                }

                .stat-box i {
                    font-size: 32px;
                    width: 60px;
                    height: 60px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    border-radius: 12px;
                }

            .stat-blue i {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
            }

            .stat-green i {
                background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
                color: white;
            }

            .stat-purple i {
                background: linear-gradient(135deg, #a855f7 0%, #9333ea 100%);
                color: white;
            }

            .stat-orange i {
                background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
                color: white;
            }

            .stat-red i {
                background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
                color: white;
            }

            .stat-number {
                font-size: 28px;
                font-weight: 700;
                color: #111827;
            }

            .stat-label {
                font-size: 14px;
                color: #6b7280;
            }

            .btn {
                padding: 10px 20px;
                border-radius: 8px;
                border: none;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.3s ease;
                display: inline-flex;
                align-items: center;
                gap: 8px;
            }

            .btn-primary {
                background: #4f46e5;
                color: white;
            }

                .btn-primary:hover {
                    background: #4338ca;
                    transform: translateY(-2px);
                    box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
                }

            .content-card {
                background: white;
                border-radius: 16px;
                box-shadow: 0 4px 20px rgba(15, 23, 42, 0.08);
                overflow: hidden;
                min-height: 650px;
            }

            .card-body {
                padding: 30px;
            }

            .table-controls {
                display: flex;
                gap: 16px;
                margin-bottom: 24px;
            }

            .search-box {
                flex: 1;
                position: relative;
                display: flex;
            }

                .search-box > i {
                    position: absolute;
                    left: 16px;
                    top: 50%;
                    transform: translateY(-50%);
                    color: #9ca3af;
                    z-index: 2;
                }

                .search-box input {
                    flex: 1;
                    width: auto;
                    padding: 12px 16px 12px 44px;
                    border: 1px solid #e5e7eb;
                    border-radius: 8px; /* Fully rounded since button is gone */
                    font-size: 14px;
                    transition: all 0.3s ease;
                }

                    .search-box input:focus {
                        outline: none;
                        border-color: #4f46e5;
                        box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
                    }

            .filter-group {
                display: flex;
                gap: 12px;
            }

                .filter-group select {
                    padding: 12px 16px;
                    border: 1px solid #e5e7eb;
                    border-radius: 8px;
                    font-size: 14px;
                    cursor: pointer;
                    min-width: 180px;
                }

            /* Custom Dropdown Styles */
            .custom-dropdown {
                position: relative;
                display: inline-block;
                min-width: 180px;
            }

            .dropdown-btn {
                width: 100%;
                padding: 12px 16px;
                background: white;
                border: 1px solid #e5e7eb;
                border-radius: 8px;
                cursor: pointer;
                display: flex;
                justify-content: space-between;
                align-items: center;
                font-size: 14px;
                color: #374151;
                transition: all 0.2s;
            }

            .dropdown-content {
                display: none;
                position: absolute;
                background-color: white;
                min-width: 100%;
                box-shadow: 0 8px 16px rgba(0,0,0,0.1);
                border-radius: 8px;
                z-index: 10;
                margin-top: 5px;
                padding: 5px 0;
                border: 1px solid #f3f4f6;
                opacity: 0;
                transform: translateY(-10px);
                transition: all 0.3s ease;
            }

            /* Active state logic */
            .custom-dropdown.active .dropdown-content {
                display: block;
                opacity: 1;
                transform: translateY(0);
            }

            .dropdown-content a {
                color: #374151;
                padding: 10px 16px;
                text-decoration: none;
                display: block;
                font-size: 14px;
                transition: background 0.2s;
            }

            .dropdown-content a:hover {
                background-color: #f3f4f6;
                color: #4f46e5;
            }

            .dropdown-btn:hover {
                border-color: #4f46e5;
                color: #4f46e5;
            }

            .table-responsive {
                overflow-x: auto;
            }

            .data-table {
                width: 100%;
                border-collapse: collapse;
            }

                .data-table thead {
                    background: #f9fafb;
                }

                .data-table th {
                    padding: 12px 16px;
                    text-align: left;
                    font-weight: 600;
                    font-size: 13px;
                    color: #6b7280;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    white-space: nowrap;
                }

                .data-table td {
                    padding: 16px;
                    border-bottom: 1px solid #f3f4f6;
                }

                .data-table tbody tr:hover {
                    background: #f9fafb;
                }

            .user-info {
                display: flex;
                align-items: center;
                gap: 12px;
            }

            .user-avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: 700;
                font-size: 16px;
            }

            .badge {
                display: inline-flex;
                align-items: center;
                gap: 6px;
                padding: 6px 12px;
                border-radius: 6px;
                font-size: 12px;
                font-weight: 600;
            }

            .badge-primary {
                background: #eef2ff;
                color: #4f46e5;
            }

            .badge-success {
                background: #dcfce7;
                color: #16a34a;
            }

            .badge-warning {
                background: #fef3c7;
                color: #d97706;
            }

            .badge-danger {
                background: #fee2e2;
                color: #dc2626;
            }

            .badge-info {
                background: #dbeafe;
                color: #2563eb;
            }

            .badge-secondary {
                background: #f3f4f6;
                color: #6b7280;
            }

            .action-buttons {
                display: flex;
                gap: 8px;
            }

            .btn-icon {
                width: 32px;
                height: 32px;
                border-radius: 6px;
                border: none;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s ease;
            }

                .btn-icon.btn-info {
                    background: #dbeafe;
                    color: #2563eb;
                }

                    .btn-icon.btn-info:hover {
                        background: #2563eb;
                        color: white;
                    }

                .btn-icon.btn-warning {
                    background: #fef3c7;
                    color: #d97706;
                }

                    .btn-icon.btn-warning:hover {
                        background: #d97706;
                        color: white;
                    }

                .btn-icon.btn-danger {
                    background: #fee2e2;
                    color: #dc2626;
                }

                    .btn-icon.btn-danger:hover {
                        background: #dc2626;
                        color: white;
                    }

            .empty-state {
                text-align: center;
                padding: 60px 20px;
                color: #9ca3af;
            }

                .empty-state i {
                    font-size: 48px;
                    margin-bottom: 16px;
                    display: block;
                }

            @@media (max-width: 768px) {
                .page-header {
                    flex-direction: column;
                    gap: 16px;
                }

                .table-controls {
                    flex-direction: column;
                }

                .filter-group {
                    flex-direction: column;
                }
            }

            /* Modal Styles */
            .modal {
                display: none;
                position: fixed;
                z-index: 1000;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0,0,0,0.5);
                overflow: auto;
            }

            .modal-content {
                background-color: #fefefe;
                margin: 5% auto;
                padding: 0;
                border-radius: 12px;
                width: 90%;
                max-width: 600px;
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            }

            .modal-header {
                padding: 20px;
                border-bottom: 1px solid #e5e7eb;
