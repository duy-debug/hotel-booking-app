    @section scripts {
        <script>
            $(document).ready(function() {
                // Auto focus search input
                $('#searchInput').focus();

                var $usersTable = $('#usersTable');
                var hasTable = $usersTable.length > 0;

                // Search functionality - auto search with debounce
                var searchTimeout;
                $('#searchInput').on('input', function() {
                    clearTimeout(searchTimeout);
                    searchTimeout = setTimeout(function() {
                        performSearch();
                    }, 500); // 500ms delay
                });

                // Toggle Dropdowns
                $('.dropdown-btn').on('click', function(e) {
                    e.stopPropagation();
                    var $parent = $(this).parent();
                    $('.custom-dropdown').not($parent).removeClass('active');
                    $parent.toggleClass('active');
                });

                // Close dropdowns when clicking outside
                $(document).on('click', function(e) {
                    if (!$(e.target).closest('.custom-dropdown').length) {
                        $('.custom-dropdown').removeClass('active');
                    }
                });

                // Handle Custom Dropdown Selection
                $('.filter-option').on('click', function() {
                    var type = $(this).data('type');
                    var value = $(this).data('value');
                    var text = $(this).data('text');
                    
                    if (type === 'role') {
                        $('#roleFilter').val(value);
                        $('#roleText').text(text);
                    } else if (type === 'status') {
                        $('#statusFilter').val(value);
                        $('#statusText').text(text);
                    }
                    
                    // Close dropdown
                    $(this).closest('.custom-dropdown').removeClass('active');
                    
                    performSearch();
                });

                function performSearch() {
                    var searchValue = $('#searchInput').val().trim();
                    var roleValue = $('#roleFilter').val();
                    var statusValue = $('#statusFilter').val();
                    
                    var url = '@Url.Action("Users", "Home65130650", new { area = "Admin" })';
                    var params = new URLSearchParams();
                    
                    if (searchValue) params.append('search', searchValue);
                    if (roleValue) params.append('role', roleValue);
                    if (statusValue) params.append('status', statusValue);
                    
                    var fullUrl = params.toString() ? url + '?' + params.toString() : url;
                    window.location.href = fullUrl;
                }

                // Form Submit với báo lỗi chi tiết
                $('#userForm').on('submit', function(e) {
                    e.preventDefault();
                    var url = isEditMode
                        ? '@Url.Action("UpdateUser", "Home65130650", new { area = "Admin" })'
                        : '@Url.Action("CreateUser", "Home65130650", new { area = "Admin" })';

                    $.ajax({
                        url: url,
                        type: 'POST',
                        data: $(this).serialize(),
                        dataType: 'json'
                    })
                    .done(function(res) {
                        if(res.success) {
                            alert(res.message);
                            location.reload();
                        } else {
                            alert(res.error || 'Không rõ lỗi');
                        }
                    })
                    .fail(showAjaxError);
                });

                // Close modals when clicking outside
                window.onclick = function(event) {
                    if (event.target.className === 'modal') {
                        event.target.style.display = 'none';
                    }
                }
            });

            function filterTable() {
                // This function is no longer needed - using server-side filtering
                performSearch();
            }

            // Modal management
            var currentUserId = '';
            var isEditMode = false;

            function openAddModal() {
                isEditMode = false;
                document.getElementById('modalTitle').textContent = 'Thêm người dùng mới';
                document.getElementById('userForm').reset();
                // Enable email for new user
                document.getElementById('email').readOnly = false;
                document.getElementById('maNguoiDung').value = '';
                document.getElementById('passwordGroup').style.display = 'block';
                document.getElementById('matKhau').required = true;
                document.getElementById('userModal').style.display = 'block';
            }

            function closeModal() {
                document.getElementById('userModal').style.display = 'none';
            }

            function closeViewModal() {
                document.getElementById('viewModal').style.display = 'none';
            }

            // View User Details
            function viewUser(id) {
                currentUserId = id;
                var url = '@Url.Action("GetUserDetails", "Home65130650", new { area = "Admin" })';

                $.ajax({
                    url: url,
                    type: 'GET',
                    data: { id: id },
                    dataType: 'json'
                })
                    .done(function(res) {
                        if(res.success) {
                            var d = res.data;
                            var html = `
                                <div class="detail-item"><label>Mã người dùng</label><span>${d.maNguoiDung}</span></div>
                                <div class="detail-item"><label>Họ tên</label><span>${d.hoTen}</span></div>
                                <div class="detail-item"><label>Email</label><span>${d.email}</span></div>
                                <div class="detail-item"><label>Số điện thoại</label><span>${d.soDienThoai || 'Chưa cập nhật'}</span></div>
                                <div class="detail-item"><label>Giới tính</label><span>${d.gioiTinh || 'Chưa cập nhật'}</span></div>
                                <div class="detail-item"><label>Ngày sinh</label><span>${d.ngaySinh || 'Chưa cập nhật'}</span></div>
                                <div class="detail-item"><label>Địa chỉ</label><span>${d.diaChi || 'Chưa cập nhật'}</span></div>
                                <div class="detail-item"><label>Vai trò</label><span>${d.vaiTro}</span></div>
                                <div class="detail-item"><label>Trạng thái</label><span>${d.trangThaiHoatDong ? 'Đang hoạt động' : 'Ngừng hoạt động'}</span></div>
                                <div class="detail-item"><label>Ngày tạo</label><span>${d.ngayTao || ''}</span></div>
                                <div class="detail-item"><label>Cập nhật cuối</label><span>${d.ngayCapNhat || ''}</span></div>
                            `;
                            $('#userDetails').html(html);

                            
                            // Populate booking history
                            if (d.bookings && d.bookings.length > 0) {
                                var historyHtml = '';
                                d.bookings.forEach(function(b) {
                                    var statusClass = 'badge-secondary';
                                    if (b.trangThaiDatPhong === 'Đã xác nhận' || b.trangThaiDatPhong === 'Đã thanh toán') statusClass = 'badge-success';
                                    else if (b.trangThaiDatPhong === 'Đã hủy') statusClass = 'badge-danger';
                                    else if (b.trangThaiDatPhong === 'Chờ xác nhận') statusClass = 'badge-warning';

                                    historyHtml += `
                                        <tr>
                                            <td style="padding: 8px;">${b.maDatPhong}</td>
                                            <td style="padding: 8px;">${b.maPhong}</td>
                                            <td style="padding: 8px;">${b.ngayDat}</td>
                                            <td style="padding: 8px;">${b.ngayNhan} <br> ${b.ngayTra}</td>
                                            <td style="padding: 8px;"><span class="badge ${statusClass}">${b.trangThaiDatPhong}</span></td>
                                        </tr>
                                    `;
                                });
                                $('#bookingHistoryBody').html(historyHtml);
                                document.getElementById('bookingHistorySection').style.display = 'block';
                            } else {
                                $('#bookingHistoryBody').empty();
                                document.getElementById('bookingHistorySection').style.display = 'none';
                            }
                            
                            document.getElementById('viewModal').style.display = 'block';
                        } else {
                            alert(res.error);
                        }
                    })
                    .fail(showAjaxError);
            }

            // Edit User
            function editUser(id) {
                isEditMode = true;
                currentUserId = id;
                var url = '@Url.Action("GetUserDetails", "Home65130650", new { area = "Admin" })';

                $.ajax({
                    url: url,
                    type: 'GET',
                    data: { id: id },
                    dataType: 'json'
                })
                    .done(function(res) {
                        if(res.success) {
                            var d = res.data;
                            document.getElementById('modalTitle').textContent = 'Chỉnh sửa người dùng';
                            document.getElementById('maNguoiDung').value = d.maNguoiDung;
                            document.getElementById('hoTen').value = d.hoTen;
                            document.getElementById('email').value = d.email;
                            // Disable email editing
                            document.getElementById('email').readOnly = true;
                            document.getElementById('soDienThoai').value = d.soDienThoai || '';
                            document.getElementById('gioiTinh').value = d.gioiTinh || '';

                            if (d.ngaySinh) {
                                // Ensure date is yyyy-MM-dd
                                document.getElementById('ngaySinh').value = d.ngaySinh;
                            } else {
                                document.getElementById('ngaySinh').value = '';
                            }

                            document.getElementById('diaChi').value = d.diaChi || '';
                            document.getElementById('maVaiTro').value = d.maVaiTro;
                            document.getElementById('passwordGroup').style.display = 'none';
                            document.getElementById('matKhau').required = false;
                            document.getElementById('userModal').style.display = 'block';
                        } else {
                            alert(res.error);
                        }
                    })
                    .fail(showAjaxError);
            }

            // Toggle Status
            function toggleStatus(id) {
                if(confirm('Bạn có chắc chắn muốn thay đổi trạng thái tài khoản này?')) {
                    var url = '@Url.Action("ToggleUserStatus", "Home65130650", new { area = "Admin" })';
                    $.ajax({
                        url: url,
                        type: 'POST',
                        data: { id: id },
                        dataType: 'json'
                    })
                        .done(function(res) {
                            if(res.success) {
                                alert(res.message);
                                location.reload();
                            } else {
                                alert(res.error);
                            }
                        })
                        .fail(showAjaxError);
                }
            }

            // Reset Password
            function resetPassword() {
                var newPwd = prompt('Nhập mật khẩu mới (ít nhất 8 ký tự):');
                if(newPwd) {
                    var url = '@Url.Action("ResetUserPassword", "Home65130650", new { area = "Admin" })';
                    $.ajax({
                        url: url,
                        type: 'POST',
                        data: { id: currentUserId, newPassword: newPwd },
                        dataType: 'json'
                    })
                        .done(function(res) {
                            if(res.success) {
                                alert(res.message);
                            } else {
                                alert(res.error);
                            }
                        })
                        .fail(showAjaxError);
                }
            }

            //   lỗi chi tiết hơn để dễ tìm nguyên nhân
            function showAjaxError(xhr, status, error) {
                var msg = 'Lỗi hệ thống (' + status + '): ' + (error || 'Không rõ');
                var detail = xhr && xhr.responseText ? '\nChi tiết: ' + xhr.responseText.substring(0, 500) : '';
                alert(msg + detail);
                console.error('AJAX Error:', { status: status, error: error, response: xhr ? xhr.responseText : '' });
            }
        </script>
    }
