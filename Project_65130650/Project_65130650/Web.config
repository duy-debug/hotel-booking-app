    <httpRuntime targetFramework="4.7.2" />
    
    <!-- CẤU HÌNH XÁC THỰC NGƯỜI DÙNG (Forms Authentication) -->
    <authentication mode="Forms">
      <forms loginUrl="~/" 
             timeout="5" 
             name=".ASPXAUTH" 
             protection="All" 
             slidingExpiration="true" 
             cookieless="UseCookies" 
             requireSSL="false" 
             defaultUrl="~/Home/Index">
      </forms>
    </authentication>
    
    <!-- CẤU HÌNH PHÂN QUYỀN TRUY CẬP: Mặc định cho phép tất cả (ẩn danh) -->
    <authorization>
      <allow users="*" />
    </authorization>
    
    <!-- Machine Key: Dùng để mã hóa và giải mã Cookie đăng nhập, đảm bảo tính bảo mật -->
    <machineKey 
      validationKey="C50B3C89CB21F4F1422FF158A5B42D0E8DB8CB5CDA1742572A487D9401E3400267682B202B746511891C1BAF47F8D25C07F6C39A104696DB51F17C529AD3CABE" 
      decryptionKey="8A9BE8FD67AF6979E7D20198CFEA50DD3D3799C77AF2B72F" 
      validation="SHA1" 
      decryption="AES" />
    
    <!-- Cấu hình Session: Lưu trữ phiên làm việc của người dùng (Thời gian hết hạn: 5 phút) -->
    <sessionState mode="InProc" timeout="5" />
  </system.web>

